<Window x:Class="SubnauticaLauncher.UI.BZMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:SubnauticaLauncher.UI"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="Subnautica Launcher"
        Width="850"
        Height="500"
        MinWidth="850"
        MinHeight="500"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        FontFamily="Aileron"
        WindowStyle="None"
        AllowsTransparency="True">

    <!-- ================= BACKGROUND ================= -->
    <Window.Background>
        <ImageBrush x:Name="BackgroundBrush"
                    Stretch="UniformToFill"/>
    </Window.Background>

    <!-- ================= RESOURCES ================= -->
    <Window.Resources>

        <ui:BZActiveColorConverter x:Key="BZActiveColorConverter"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style TargetType="ScrollViewer">
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                CornerRadius="14">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton
                        Background="Transparent"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                        Focusable="False"/>

                            <ContentPresenter
                        Content="{TemplateBinding SelectionBoxItem}"
                        Margin="8,2,30,2"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        TextElement.Foreground="White"/>

                            <Path Data="M 0 0 L 4 4 L 8 0 Z"
                          Fill="White"
                          HorizontalAlignment="Right"
                          Margin="0,0,10,0"
                          VerticalAlignment="Center"/>

                            <Popup x:Name="PART_Popup"
                           Placement="Bottom"
                           IsOpen="{TemplateBinding IsDropDownOpen}"
                           AllowsTransparency="True">
                                <Border Background="Black"
                                BorderBrush="White"
                                BorderThickness="2"
                                CornerRadius="5"
                                Margin="0,4,0,0">
                                    <ScrollViewer>
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome
CaptionHeight="25"
ResizeBorderThickness="6"
CornerRadius="0"
GlassFrameThickness="0"
UseAeroCaptionButtons="False" />
    </shell:WindowChrome.WindowChrome>

    <!-- ================= ROOT ================= -->
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <!-- TITLE BAR -->
            <RowDefinition Height="*"/>
            <!-- CONTENT -->
        </Grid.RowDefinitions>

        <!-- ================= CUSTOM TITLE BAR ================= -->
        <Grid Grid.Row="0"
      Background="#40000000"
      MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Icon -->
                <ColumnDefinition Width="Auto"/>
                <!-- Title -->
                <ColumnDefinition Width="*"/>
                <!-- Spacer -->
                <ColumnDefinition Width="Auto"/>
                <!-- Game toggle -->
                <ColumnDefinition Width="*"/>
                <!-- Spacer -->
                <ColumnDefinition Width="Auto"/>
                <!-- Window buttons -->
            </Grid.ColumnDefinitions>

            <!-- ICON -->
            <Image Grid.Column="0"
           Source="pack://application:,,,/Assets/Icons/SNLIconBZ.png"
           Width="16"
           Height="16"
           Margin="12,0,8,0"
           VerticalAlignment="Center"/>

            <!-- TITLE -->
            <StackPanel Grid.Column="1"
                Orientation="Horizontal"
                VerticalAlignment="Center">
                <TextBlock Text="Below Zero Launcher"
                   FontSize="13"
                   FontWeight="SemiBold"
                   Margin="0,0,6,0"/>
                <TextBlock Text="v1.0.7"
                   FontSize="13"
                   Opacity="0.7"/>
            </StackPanel>

            <!-- GAME TOGGLE BUTTON (CENTERED, IMAGE FILLS BUTTON) -->
            <Button x:Name="GameToggleButton"
        Grid.Column="3"
        Width="160"
        Height="22"
        Padding="0"
        Background="Transparent"
        BorderThickness="0"
        Click="GameToggleButton_Click"
        shell:WindowChrome.IsHitTestVisibleInChrome="True">

                <Grid ClipToBounds="True">
                    <!-- BACKGROUND IMAGE (FILLS ENTIRE BUTTON) -->
                    <Image x:Name="GameToggleImage"
               Source="pack://application:,,,/Assets/Icons/SNLButton.png"
               Stretch="Fill"/>

                    <!-- DARK OVERLAY FOR TEXT READABILITY -->
                    <Border Background="#40000000"/>

                    <!-- CENTER TEXT -->
                    <TextBlock x:Name="GameToggleText"
                   Text="Switch to Subnautica"
                   Foreground="White"
                   FontSize="12"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

                    <!-- OUTLINE -->
                    <Border BorderBrush="#66FFFFFF"
                BorderThickness="1"/>
                </Grid>
            </Button>

            <!-- WINDOW BUTTONS -->
            <StackPanel Grid.Column="5"
                Orientation="Horizontal">

                <Button Content="—"
                Width="44"
                Height="25"
                Background="Transparent"
                BorderBrush="#55000000"
                BorderThickness="1"
                Click="Minimize_Click"
                shell:WindowChrome.IsHitTestVisibleInChrome="True"/>

                <Button Content="□"
                Width="44"
                Height="25"
                Background="Transparent"
                BorderBrush="#55000000"
                BorderThickness="1"
                Click="Maximize_Click"
                shell:WindowChrome.IsHitTestVisibleInChrome="True"/>

                <Button Content="✕"
                Width="44"
                Height="25"
                Background="#8B2C2C"
                BorderBrush="#55000000"
                BorderThickness="1"
                Click="Close_Click"
                shell:WindowChrome.IsHitTestVisibleInChrome="True"/>
            </StackPanel>
        </Grid>

        <!-- ================= CONTENT ================= -->
        <Viewbox Grid.Row="1"
                 Stretch="Uniform"
                 StretchDirection="UpOnly">

            <Border Padding="0">

                <!-- BASE SIZE (DO NOT CHANGE) -->
                <Grid Width="850"
                      Height="468"
                      Margin="10">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- ================= LEFT SIDEBAR ================= -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0"
                        VerticalAlignment="Center">

                            <Button Content="Versions List"
                        Width="185"
                        Height="60"
                        Margin="0,5"
                        FontSize="25"
                        Background="#154966"
                        Style="{StaticResource RoundedButton}"
                        Click="InstallsTab_Click"/>

                            <Button Content="Settings"
                        Width="185"
                        Height="60"
                        FontSize="25" 
                        Margin="0,25,0,0"            
                        Background="#154966"
                        Style="{StaticResource RoundedButton}"
                        Click="SettingsTab_Click"/>

                            <Button Content="Tools"
        Width="185"
        Height="60"
        FontSize="25"
        Margin="0,25,0,0"
        Background="#154966"
        Style="{StaticResource RoundedButton}"
        Click="ToolsTab_Click"/>


                            <Button Content="Updates"
                        Width="185"
                        Height="60"
                        FontSize="25"
                        Margin="0,25"
                        Background="#154966"
                        Style="{StaticResource RoundedButton}"
                        Click="InfoTab_Click"/>
                        </StackPanel>

                        <Button Grid.Row="1"
                    Content="Launch"
                    Width="200"
                    Height="80"
                    Margin="0,0,0,25"
                    Background="#FF4FD38B"
                    FontSize="40"
                    Style="{StaticResource RoundedButton}"
                    Click="Launch_Click"/>
                    </Grid>

                    <!-- ================= CONTENT ================= -->
                    <Grid Grid.Column="1">

                        <!-- ===== INSTALLS VIEW ===== -->
                        <Grid x:Name="InstallsView" Margin="16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- ROUNDED VERSIONS LIST -->
                            <Border Grid.Row="1"
        Margin="0,50,10,15"
        Background="#90000000"
        CornerRadius="14"
        Padding="6">

                                <ListBox x:Name="BZInstalledVersionsList"
             FontSize="17"
             Margin="0,0,0,0"                            
             FontWeight="UltraLight"
             Background="Transparent"
             BorderThickness="0">

                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding DisplayLabel}"
                           Margin="6,4"
                           Foreground="{Binding Status,
                           Converter={StaticResource BZActiveColorConverter}}"/>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>

                                </ListBox>

                            </Border>

                            <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,12,0,0">

                                <Button Content="Open Folder"
Width="140"
Height="44"
Margin="0,0,15,0"
Background="#154966"
Style="{StaticResource RoundedButton}"
Click="OpenInstallFolder_Click"/>

                                <Button Content="Add"
                            Width="76"
                            Height="44"
                            Margin="0,0,15,0"
                            Background="#154966"
                            Style="{StaticResource RoundedButton}"
                            Click="InstallVersion_Click"/>

                                <Button Content="Edit"
Width="76"
Height="44"
Margin="0,0,15,0"
Background="#154966"
Style="{StaticResource RoundedButton}"
Click="EditVersion_Click"/>
                            </StackPanel>
                        </Grid>

                        <!-- ===== SETTINGS VIEW ===== -->
                        <Grid x:Name="SettingsView"
      Visibility="Collapsed"
      Margin="24">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- ================= LEFT: CUSTOMIZE ================= -->
                            <Border Grid.Column="0"
            Margin="0,0,12,0"
            Background="#80000000"
            CornerRadius="12"
            Padding="16">

                                <StackPanel>
                                    <TextBlock Text="Customize"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,12"/>

                                    <TextBlock Text="Background"
                       FontWeight="SemiBold"
                       Margin="0,0,0,6"/>

                                    <ComboBox x:Name="ThemeDropdown"
                      Style="{StaticResource DarkComboBox}"
                      SelectionChanged="ThemeDropdown_SelectionChanged">

                                        <ComboBoxItem Content="Lifepod"/>
                                        <ComboBoxItem Content="Safe Shallows"/>
                                        <ComboBoxItem Content="Kelp Forest"/>
                                        <ComboBoxItem Content="Grassy Plateau"/>
                                        <ComboBoxItem Content="Lost River"/>
                                        <ComboBoxItem Content="Cove Tree"/>
                                        <ComboBoxItem Content="Floating Island"/>
                                        <ComboBoxItem Content="Jellyshroom Caves"/>
                                        <ComboBoxItem Content="Grand Reef"/>
                                        <ComboBoxItem Content="Reaper Leviathan"/>
                                        <ComboBoxItem Content="Ghost Leviathan"/>
                                        <ComboBoxItem Content="Sea Dragon Leviathan"/>
                                        <ComboBoxItem Content="Twisty Bridges"/>
                                        <ComboBoxItem Content="Aurora Borealis"/>
                                        <ComboBoxItem Content="Snowfox"/>
                                        <ComboBoxItem Content="Icy Land"/>
                                        <ComboBoxItem Content="Arcitect Facility"/>
                                        <ComboBoxItem Content="Red Crystals"/>
                                        <ComboBoxItem Content="Snow Stalker"/>
                                        <ComboBoxItem Content="Squid Shark"/>
                                        <ComboBoxItem Content="Shadow Leviathan"/>
                                        <ComboBoxItem Content="Custom"/>
                                    </ComboBox>

                                    <Button Content="Choose Custom Background"
                    Height="35"
                    Margin="0,15,0,0"
                    Background="#154966"
                    Style="{StaticResource RoundedButton}"
                    Click="ChooseCustomBackground_Click"/>
                                </StackPanel>
                            </Border>

                            <!-- ================= RIGHT: OPTIONS ================= -->
                            <Border Grid.Column="1"
            Margin="12,0,0,0"
            Background="#60000000"
            CornerRadius="12"
            Padding="16">

                                <StackPanel>
                                    <TextBlock Text="Options"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,12"/>

                                </StackPanel>

                            </Border>

                        </Grid>

                        <!-- ===== TOOLS VIEW ===== -->
                        <Grid x:Name="ToolsView"
      Visibility="Collapsed"
      Margin="24">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- ================= LEFT: RESET MACRO + EXPLOSION ================= -->
                            <Border Grid.Column="0"
            Background="#80000000"
            CornerRadius="12"
            Padding="16"
            Margin="0,0,12,0">

                                <StackPanel>

                                    <!-- ===== RESET MACRO HEADER ===== -->
                                    <Grid Margin="0,0,0,16">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="Reset Macro"
                           FontSize="20"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>

                                        <Button x:Name="ResetMacroToggleButton"
                        Grid.Column="1"
                        Width="110"
                        Height="30"
                        Margin="8,0,0,0"
                        Background="#8B2C2C"
                        Content="Disabled"
                        Style="{StaticResource RoundedButton}"
                        Click="ResetMacroToggleButton_Click"/>
                                    </Grid>

                                    <!-- HOTKEY -->
                                    <TextBlock Text="Hotkey"
                       FontWeight="SemiBold"
                       Margin="0,0,0,4"/>

                                    <Grid Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox x:Name="ResetHotkeyBox"
                         Height="32"
                         IsReadOnly="True"
                         Text="Not set"
                         Foreground="#CCCCCC"
                         Background="#22000000"
                         BorderBrush="White"
                         BorderThickness="1"
                         Padding="8"/>

                                        <Button Grid.Column="1"
                        Content="Set"
                        Width="70"
                        Height="32"
                        Margin="8,0,0,0"
                        Background="#154966"
                        Style="{StaticResource RoundedButton}"
                        Click="SetResetHotkey_Click"/>
                                    </Grid>

                                    <!-- GAMEMODE -->
                                    <TextBlock Text="Gamemode"
                       FontWeight="SemiBold"
                       Margin="0,0,0,4"/>

                                    <ComboBox x:Name="ResetGamemodeDropdown"
                      Style="{StaticResource DarkComboBox}"
                      SelectionChanged="ResetGamemodeDropdown_SelectionChanged">
                                        <ComboBoxItem Content="Survival"/>
                                        <ComboBoxItem Content="Hardcore"/>
                                        <ComboBoxItem Content="Creative"/>
                                        <ComboBoxItem Content="Freedom"/>
                                        <ComboBoxItem Content="SaveSlot1"/>
                                        <ComboBoxItem Content="SaveSlot2"/>
                                        <ComboBoxItem Content="SaveSlot3"/>
                                    </ComboBox>

                                    <TextBlock Text="Only work on 1.00/Default Ingame UI Scale"
FontWeight="SemiBold"
Margin="0,12,0,4"/>
                                </StackPanel>
                            </Border>

                            <!-- ================= RIGHT: FUTURE TOOLS ================= -->
                            <Border Grid.Column="1"
            Background="#60000000"
            CornerRadius="12"
            Padding="16">

                                <StackPanel>
                                    <TextBlock Text="Future Tools"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,12"/>

                                    <TextBlock Text="(More Tools Coming Soon)"
                       Foreground="#AAAAAA"
                       FontStyle="Italic"/>
                                </StackPanel>

                            </Border>

                        </Grid>

                        <!-- ===== UPDATES VIEW ===== -->
                        <Grid x:Name="InfoView"
      Visibility="Collapsed"
      Margin="24">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- HEADER -->
                            <TextBlock Text="Updates"
               HorizontalAlignment="Center"
               FontSize="26"
               FontWeight="UltraBold"
               Margin="-50,0,0,12"/>

                            <!-- ROUNDED UPDATES CONTAINER -->
                            <ScrollViewer Grid.Row="1"
                  VerticalScrollBarVisibility="Hidden">

                                <Border Background="#80000000"
                CornerRadius="14"
                Padding="14"
                Margin="0,0,8,0">

                                    <StackPanel x:Name="UpdatesPanel"/>

                                </Border>

                            </ScrollViewer>

                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Viewbox>
    </Grid>
</Window>