<Window x:Class="SubnauticaLauncher.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Setting up Subnautica Launcher"
        Width="420"
        Height="160"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">

    <StackPanel Margin="20">
        <TextBlock Text="Preparing launcher..."
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <TextBlock x:Name="StatusText"
                   Text="Initializing..."
                   FontSize="13"/>
    </StackPanel>
</Window>