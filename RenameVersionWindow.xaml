<Window x:Class="SubnauticaLauncher.RenameVersionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rename Version"
        Height="265"
        Width="360"
        WindowStartupLocation="CenterOwner"
        Background="#FF1B4F72"
        FontFamily="Aileron">

    <!-- ================= RESOURCES ================= -->
    <Window.Resources>

        <!-- GLOBAL TEXT -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- TEXTBOX STYLE -->
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#331B4F72"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- ROUNDED BUTTON (MATCHES MAIN WINDOW) -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                CornerRadius="14">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Background" Value="#333"/>
                                <Setter Property="Foreground" Value="#888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!-- ================= CONTENT ================= -->
    <Border Background="#331B4F72"
            CornerRadius="14"
            Padding="16"
            Margin="12">

        <StackPanel Margin="0,0,0,-26">

            <TextBlock Text="Display Name"
                       FontWeight="SemiBold"/>

            <TextBox x:Name="DisplayNameBox"
                     Margin="0,4,0,10"/>

            <TextBlock Text="Folder Name"
                       FontWeight="SemiBold"/>

            <TextBox x:Name="FolderNameBox"
                     Margin="0,4,0,6"/>

            <TextBlock Text="Change folder name when adding the same version multiple times."
                       FontSize="11"
                       Foreground="#D0E7F2"
                       TextWrapping="Wrap"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,16,0,0">

                <!-- CANCEL -->
                <Button Content="Save"
                        Width="80"
                        Height="34"
                        Margin="0,0,8,0"
                        Background="#FF4FD38B"
                        Style="{StaticResource RoundedButton}"
                        Click="Save_Click"/>

                <!-- SAVE -->
                <Button Content="Cancel"
                        Width="80"
                        Height="34"
                        Background="#8B2C2C"
                        Style="{StaticResource RoundedButton}"
                        Click="Cancel_Click"/>

            </StackPanel>

        </StackPanel>
    </Border>
</Window>
