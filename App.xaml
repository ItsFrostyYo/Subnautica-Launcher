<Application x:Class="SubnauticaLauncher.Core.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="UI/MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <FontFamily x:Key="AppFontFamily">pack://application:,,,/Assets/Subnautica/#Aller</FontFamily>

            <Style TargetType="{x:Type Window}">
                <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
                <Setter Property="UseLayoutRounding" Value="True"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
                <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
                <Setter Property="TextOptions.TextRenderingMode" Value="Grayscale"/>
                <Setter Property="TextOptions.TextHintingMode" Value="Fixed"/>
            </Style>

            <Style TargetType="{x:Type Control}">
                <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
                <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
                <Setter Property="TextOptions.TextRenderingMode" Value="Grayscale"/>
                <Setter Property="TextOptions.TextHintingMode" Value="Fixed"/>
            </Style>

            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
                <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
                <Setter Property="TextOptions.TextRenderingMode" Value="Grayscale"/>
                <Setter Property="TextOptions.TextHintingMode" Value="Fixed"/>
            </Style>

            <Style TargetType="{x:Type TextElement}">
                <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
                <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
                <Setter Property="TextOptions.TextRenderingMode" Value="Grayscale"/>
                <Setter Property="TextOptions.TextHintingMode" Value="Fixed"/>
            </Style>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="UI/Styles/CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>

