<Window x:Class="SubnauticaLauncher.UI.HardcoreSaveDeleterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="Hardcore Save Deleter"
        Width="440"
        SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        FontFamily="Aileron"
        WindowStyle="None"
        AllowsTransparency="True">

    <!-- ================= RESOURCES ================= -->
    <Window.Resources>

        <ImageBrush x:Key="BackgroundBrush"
                    Stretch="UniformToFill"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="MutedText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#D0E7F2"/>
        </Style>

        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton
                        Background="Transparent"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                        Focusable="False">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"/>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <ContentPresenter
                        Content="{TemplateBinding SelectionBoxItem}"
                        Margin="8,2,30,2"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        TextElement.Foreground="White"/>

                            <Path Data="M 0 0 L 4 4 L 8 0 Z"
                          Fill="White"
                          HorizontalAlignment="Right"
                          Margin="0,0,10,0"
                          VerticalAlignment="Center"/>

                            <Popup x:Name="PART_Popup"
                           Placement="Bottom"
                           IsOpen="{TemplateBinding IsDropDownOpen}"
                           AllowsTransparency="True">
                                <Border Background="Black"
                                BorderBrush="White"
                                BorderThickness="2"
                                CornerRadius="5"
                                Margin="0,4,0,0">
                                    <ScrollViewer>
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome
            CaptionHeight="25"
            ResizeBorderThickness="6"
            CornerRadius="0"
            GlassFrameThickness="0"
            UseAeroCaptionButtons="False"/>
    </shell:WindowChrome.WindowChrome>

    <Grid>

        <Rectangle Fill="{StaticResource BackgroundBrush}">
            <Rectangle.Effect>
                <BlurEffect Radius="8"/>
            </Rectangle.Effect>
        </Rectangle>

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ================= TITLE BAR ================= -->
            <Grid Grid.Row="0"
                  Background="#40000000"
                  MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Source="pack://application:,,,/Assets/Icons/SNLIcon.png"
                       Width="16"
                       Height="16"
                       Margin="12,0,8,0"
                       VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1"
                           Text="Hardcore Save Deleter"
                           VerticalAlignment="Center"
                           FontSize="13"
                           Margin="0,3,0,0"
                           FontWeight="SemiBold"/>

                <StackPanel Grid.Column="2"
                            Orientation="Horizontal">
                    <Button Content="✕"
                            Width="44"
                            Height="25"
                            Background="#8B2C2C"
                            BorderBrush="#55000000"
                            BorderThickness="1"
                            Click="Close_Click"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True"/>
                </StackPanel>
            </Grid>

            <!-- ================= CONTENT ================= -->
            <Border Grid.Row="1"
                    Background="#90000000"
                    CornerRadius="14"
                    Padding="12"
                    Margin="12,8,12,12">

                <StackPanel>
                    <TextBlock Text="Delete all Hardcore saves"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>

                    <TextBlock Text="This will permanently delete Hardcore save folders."
                               Style="{StaticResource MutedText}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Game"
                               FontWeight="SemiBold"
                               Margin="0,0,0,4"/>
                    <ComboBox x:Name="GameChoiceDropdown"
                              Style="{StaticResource DarkComboBox}">
                        <ComboBoxItem Content="Subnautica"/>
                        <ComboBoxItem Content="Below Zero"/>
                        <ComboBoxItem Content="Both"/>
                    </ComboBox>

                    <TextBlock Text="Scope"
                               FontWeight="SemiBold"
                               Margin="0,10,0,4"/>
                    <ComboBox x:Name="ScopeChoiceDropdown"
                              Style="{StaticResource DarkComboBox}">
                        <ComboBoxItem Content="Active Version(s) Only"/>
                        <ComboBoxItem Content="All Managed Versions"/>
                    </ComboBox>

                    <CheckBox x:Name="ConfirmCheckBox"
                              Content="I understand this is permanent."
                              Margin="0,10,0,6"
                              Foreground="White"
                              Checked="ConfirmCheckBox_Changed"
                              Unchecked="ConfirmCheckBox_Changed"/>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,4,0,0">
                        <Button x:Name="DeleteButton"
                                Content="Delete Hardcore Saves"
                                Width="200"
                                Margin="0,0,12,0"
                                Background="#8B2C2C"
                                Style="{StaticResource RoundedButton}"
                                IsEnabled="False"
                                Click="Delete_Click"/>

                        <Button Content="Cancel"
                                Width="120"
                                Background="#154966"
                                Style="{StaticResource RoundedButton}"
                                Click="Cancel_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
