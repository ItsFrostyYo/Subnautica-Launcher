<Window x:Class="SubnauticaLauncher.Explosion.ExplosionResetDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="300"
        Height="110"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowActivated="False"
        Focusable="False"
        IsHitTestVisible="False"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False">

    <!-- OUTER BORDER IS THE ONLY VISIBLE SHAPE -->
    <Border CornerRadius="12"
            Background="#55000000"
            BorderBrush="#40FFFFFF"
            BorderThickness="0.25"
            Padding="15">

        <StackPanel VerticalAlignment="Center">

            <!-- CURRENT STEP -->
            <TextBlock x:Name="StepText"
                       Text="Macro Idle"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="#FF4FD38B"
                       Margin="0,0,0,4"/>

            <!-- TIME -->
            <TextBlock x:Name="ExplosionTimeText"
                       Text="Time: --:--:--.---"
                       FontSize="14"
                       Foreground="White"
                       Margin="0,0,0,2"/>

            <!-- RESET COUNT -->
            <TextBlock x:Name="ResetCountText"
                       Text="Resets This Session: 0"
                       FontSize="13"
                       Foreground="#CCCCCC"/>

        </StackPanel>
    </Border>
</Window>
