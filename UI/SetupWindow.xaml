<Window x:Class="SubnauticaLauncher.UI.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="Setting up Subnautica Launcher"
        Width="420"
        Height="160"
        MinWidth="420"
        MinHeight="160"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        FontFamily="{DynamicResource AppFontFamily}"
        WindowStyle="None"
        AllowsTransparency="True">

    <!-- ================= RESOURCES ================= -->
    <Window.Resources>

        <!-- SHARED BACKGROUND BRUSH (set from code-behind like other windows) -->
        <ImageBrush x:Key="BackgroundBrush"
                    Stretch="UniformToFill"/>

        <!-- GLOBAL TEXT -->
        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="Foreground" Value="White"/>
        </Style>

    </Window.Resources>

    <!-- ================= WINDOW CHROME ================= -->
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome
            CaptionHeight="25"
            ResizeBorderThickness="0"
            CornerRadius="0"
            GlassFrameThickness="0"
            UseAeroCaptionButtons="False"/>
    </shell:WindowChrome.WindowChrome>

    <!-- ================= ROOT ================= -->
    <Grid>

        <!-- ===== BLURRED BACKGROUND ===== -->
        <Rectangle Fill="{StaticResource BackgroundBrush}">
            <Rectangle.Effect>
                <!-- Same subtle blur as other dialogs -->
                <BlurEffect Radius="8"/>
            </Rectangle.Effect>
        </Rectangle>

        <!-- ===== WINDOW CONTENT ===== -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ================= TITLE BAR ================= -->
            <Grid Grid.Row="0"
                  Background="#40000000"
                  MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- ICON -->
                <Image Source="pack://application:,,,/Assets/Icons/SNLIcon.png"
                       Width="16"
                       Height="16"
                       Margin="12,0,8,0"
                       VerticalAlignment="Center"/>

                <!-- TITLE -->
                <TextBlock Grid.Column="1"
                           Text="Setting up Subnautica Launcher"
                           VerticalAlignment="Center"
                           FontSize="13"
                           Margin="0,3,0,0"
                           FontWeight="SemiBold"/>

                <!-- CLOSE ONLY -->
                <Button Grid.Column="2"
                        Content="&#x2715;"
                        Width="44"
                        Height="25"
                        Background="#8B2C2C"
                        BorderBrush="#55000000"
                        BorderThickness="1"
                        Click="Close_Click"
                        shell:WindowChrome.IsHitTestVisibleInChrome="True"/>
            </Grid>

            <!-- ================= CONTENT ================= -->
            <Border Grid.Row="1"
                    Background="#66000000"
                    BorderBrush="#99000000"
                    BorderThickness="1"
                    CornerRadius="14"
                    Padding="20"
                    Margin="20">

                <StackPanel VerticalAlignment="Center">

                    <TextBlock Text="Preparing launcher..."
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"
                               HorizontalAlignment="Center"/>

                    <TextBlock x:Name="StatusText"
                               Text="Initializing..."
                               FontSize="13"
                               Foreground="#D0E7F2"
                               HorizontalAlignment="Center"/>

                </StackPanel>
            </Border>

        </Grid>
    </Grid>
</Window>


