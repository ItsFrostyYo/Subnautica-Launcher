<Window x:Class="SubnauticaLauncher.UI.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Setting up Subnautica Launcher"
        Width="420"
        Height="160"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Background="#FF1B4F72"
        FontFamily="Aileron">

    <!-- ================= RESOURCES ================= -->
    <Window.Resources>

        <!-- GLOBAL TEXT -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>

    </Window.Resources>

    <!-- ================= CONTENT ================= -->
    <Border Background="#331B4F72"
            CornerRadius="14"
            Padding="20"
            Margin="12">

        <StackPanel VerticalAlignment="Center">

            <TextBlock Text="Preparing launcher..."
                       FontSize="18"
                       FontWeight="SemiBold"
                       Margin="0,0,0,8"/>

            <TextBlock x:Name="StatusText"
                       Text="Initializing..."
                       FontSize="13"
                       Foreground="#D0E7F2"/>

        </StackPanel>
    </Border>
</Window>