<Window x:Class="SubnauticaLauncher.UI.Subnautica100TrackerOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="300"
        Height="110"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowActivated="False"
        Focusable="False"
        IsHitTestVisible="False"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False">

    <Border CornerRadius="12"
            Background="#55000000"
            BorderBrush="#40FFFFFF"
            BorderThickness="0.25"
            Padding="15">

        <StackPanel VerticalAlignment="Center">
            <TextBlock x:Name="StepText"
                       Text="100% Entry Tracker"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="#FF4FD38B"
                       Margin="0,0,0,4"/>

            <TextBlock x:Name="ProgressText"
                       Text="(0/434) 0%"
                       FontSize="14"
                       Foreground="White"
                       Margin="0,0,0,2"/>

            <TextBlock x:Name="BreakdownText"
                       Text="Blueprints: 0/157 | Entries: 0/277"
                       FontSize="13"
                       Foreground="#CCCCCC"/>
        </StackPanel>
    </Border>
</Window>
