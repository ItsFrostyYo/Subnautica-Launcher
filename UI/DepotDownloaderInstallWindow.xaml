<Window x:Class="SubnauticaLauncher.UI.DepotDownloaderInstallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="Installing Version"
        Width="760"
        Height="560"
        MinWidth="760"
        MinHeight="560"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        FontFamily="{DynamicResource AppFontFamily}"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <ImageBrush x:Key="BackgroundBrush" Stretch="UniformToFill"/>

        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#22000000"/>
            <Setter Property="BorderBrush" Value="#99FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#22000000"/>
            <Setter Property="BorderBrush" Value="#99FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
        </Style>
    </Window.Resources>

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome
            CaptionHeight="25"
            ResizeBorderThickness="6"
            CornerRadius="0"
            GlassFrameThickness="0"
            UseAeroCaptionButtons="False"/>
    </shell:WindowChrome.WindowChrome>

    <Grid>
        <Rectangle Fill="{StaticResource BackgroundBrush}">
            <Rectangle.Effect>
                <BlurEffect Radius="8"/>
            </Rectangle.Effect>
        </Rectangle>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"
                  Background="#40000000"
                  MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Source="pack://application:,,,/Assets/Icons/SNLIcon.png"
                       Width="16"
                       Height="16"
                       Margin="12,0,8,0"
                       VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1"
                           x:Name="TitleText"
                           Text="Installing Version"
                           VerticalAlignment="Center"
                           FontSize="13"
                           Margin="0,3,0,0"
                           FontWeight="SemiBold"/>

                <Button Grid.Column="2"
                        Content="&#x2715;"
                        Width="44"
                        Height="25"
                        Background="#8B2C2C"
                        BorderBrush="#55000000"
                        BorderThickness="1"
                        Click="Close_Click"
                        shell:WindowChrome.IsHitTestVisibleInChrome="True"/>
            </Grid>

            <Border Grid.Row="1"
                    Background="#72000000"
                    CornerRadius="14"
                    Padding="14"
                    Margin="12,12,12,16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="StageText"
                               Grid.Row="0"
                               FontWeight="SemiBold"
                               FontSize="15"
                               TextWrapping="Wrap"
                               Text="Preparing install..."/>

                    <ProgressBar x:Name="DownloadProgress"
                                 Grid.Row="1"
                                 Height="18"
                                 Margin="0,10,0,0"
                                 Minimum="0"
                                 Maximum="100"
                                 IsIndeterminate="True"/>

                    <TextBlock x:Name="PercentText"
                               Grid.Row="2"
                               Margin="0,6,0,10"
                               Foreground="#C2E8FF"
                               Text="Waiting for progress data..."/>

                    <Border Grid.Row="3"
                            Background="#65000000"
                            BorderBrush="#50FFFFFF"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Install Log"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,6"/>

                            <ScrollViewer Grid.Row="1"
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Auto"
                                          CanContentScroll="False">
                                <TextBox x:Name="LogText"
                                         IsReadOnly="True"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         Padding="0"
                                         TextWrapping="NoWrap"
                                         FontFamily="{DynamicResource AppFontFamily}"
                                         VerticalScrollBarVisibility="Disabled"
                                         AcceptsReturn="True"/>
                            </ScrollViewer>
                        </Grid>
                    </Border>

                    <Border x:Name="PromptPanel"
                            Grid.Row="4"
                            Margin="0,10,0,0"
                            Padding="10"
                            Background="#7A1B4F72"
                            BorderBrush="#99FFFFFF"
                            BorderThickness="1"
                            CornerRadius="10"
                            Visibility="Collapsed">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock x:Name="PromptText"
                                       FontWeight="SemiBold"
                                       TextWrapping="Wrap"
                                       Text="Authentication input required."/>

                            <TextBox x:Name="PromptInputTextBox"
                                     Grid.Row="1"
                                     Margin="0,8,0,0"
                                     Visibility="Collapsed"/>

                            <PasswordBox x:Name="PromptInputPasswordBox"
                                         Grid.Row="1"
                                         Margin="0,8,0,0"
                                         Visibility="Collapsed"/>

                            <StackPanel Grid.Row="2"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        Margin="0,8,0,0">
                                <Button Content="Submit"
                                        Width="100"
                                        Margin="0,0,8,0"
                                        Background="#2E7D32"
                                        Style="{StaticResource RoundedButton}"
                                        Click="SubmitPrompt_Click"/>
                                <Button Content="Cancel Prompt"
                                        Width="120"
                                        Background="#8B2C2C"
                                        Style="{StaticResource RoundedButton}"
                                        Click="CancelPrompt_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Grid Grid.Row="5" Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock x:Name="ResultText"
                                   VerticalAlignment="Center"
                                   Foreground="#FFE0B2"
                                   Text=""/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button x:Name="CancelInstallButton"
                                    Content="Cancel Install"
                                    Width="130"
                                    Background="#8B2C2C"
                                    Style="{StaticResource RoundedButton}"
                                    Click="CancelInstall_Click"/>
                            <Button x:Name="DoneButton"
                                    Content="Done"
                                    Width="110"
                                    Margin="10,0,0,0"
                                    Background="#2E7D32"
                                    Style="{StaticResource RoundedButton}"
                                    Visibility="Collapsed"
                                    Click="Done_Click"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>




