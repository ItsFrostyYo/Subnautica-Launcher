<Window x:Class="SubnauticaLauncher.UI.AddUnmanagedVersionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="Add Unmanaged Version"
        Width="420"
        Height="420"
        MinWidth="420"
        MinHeight="420"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        FontFamily="{DynamicResource AppFontFamily}"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <ImageBrush x:Key="BackgroundBrush"
                    Stretch="UniformToFill"/>

        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="MutedText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#D0E7F2"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#331B4F72"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton
                                Background="Transparent"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                Focusable="False">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"/>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <ContentPresenter
                                Content="{TemplateBinding SelectionBoxItem}"
                                Margin="8,2,30,2"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                TextElement.Foreground="White"/>

                            <Path Data="M 0 0 L 4 4 L 8 0 Z"
                                  Fill="White"
                                  HorizontalAlignment="Right"
                                  Margin="0,0,10,0"
                                  VerticalAlignment="Center"/>

                            <Popup x:Name="PART_Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True">
                                <Border Background="Black"
                                        BorderBrush="White"
                                        BorderThickness="2"
                                        CornerRadius="5"
                                        Margin="0,4,0,0">
                                    <ScrollViewer>
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome
            CaptionHeight="25"
            ResizeBorderThickness="6"
            CornerRadius="0"
            GlassFrameThickness="0"
            UseAeroCaptionButtons="False"/>
    </shell:WindowChrome.WindowChrome>

    <Grid>
        <Rectangle Fill="{StaticResource BackgroundBrush}">
            <Rectangle.Effect>
                <BlurEffect Radius="8"/>
            </Rectangle.Effect>
        </Rectangle>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"
                  Background="#40000000"
                  MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Source="pack://application:,,,/Assets/Icons/SNLIcon.png"
                       Width="16"
                       Height="16"
                       Margin="12,0,8,0"
                       VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1"
                           Text="Add Unmanaged Version"
                           VerticalAlignment="Center"
                           FontSize="13"
                           Margin="0,3,0,0"
                           FontWeight="SemiBold"/>

                <StackPanel Grid.Column="2"
                            Orientation="Horizontal">

                    <Button Content="&#x2014;"
                            Width="44"
                            Height="25"
                            Background="Transparent"
                            BorderBrush="#55000000"
                            BorderThickness="1"
                            Click="Minimize_Click"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True"/>

                    <Button Content="&#x25A1;"
                            Width="44"
                            Height="25"
                            Background="Transparent"
                            BorderBrush="#55000000"
                            BorderThickness="1"
                            Click="Maximize_Click"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True"/>

                    <Button Content="&#x2715;"
                            Width="44"
                            Height="25"
                            Background="#8B2C2C"
                            BorderBrush="#55000000"
                            BorderThickness="1"
                            Click="Close_Click"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True"/>
                </StackPanel>
            </Grid>

            <Border Grid.Row="1"
                    Background="#66000000"
                    BorderBrush="#99000000"
                    BorderThickness="1"
                    CornerRadius="14"
                    Padding="10"
                    Margin="20">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Add Existing Version"
                               FontWeight="UltraBold"
                               FontSize="20"
                               Margin="0,0,0,12"/>

                    <StackPanel Grid.Row="1">
                        <TextBlock Text="Folder (Must Contain Game Executable)"
                                   FontWeight="Heavy"
                                   FontSize="14"
                                   Style="{StaticResource MutedText}"
                                   Margin="0,0,0,4"/>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="FolderPathBox"
                                     IsReadOnly="True"/>

                            <Button Content="Browse"
                                    Width="80"
                                    Margin="8,0,0,0"
                                    Grid.Column="1"
                                    Background="#154966"
                                    Style="{StaticResource RoundedButton}"
                                    Click="Browse_Click"/>
                        </Grid>

                        <TextBlock Text="Display Name"
                                   FontWeight="Heavy"
                                   FontSize="14"
                                   Style="{StaticResource MutedText}"
                                   Margin="0,0,0,4"/>

                        <TextBox x:Name="DisplayNameBox"
                                 MaxLength="25"
                                 Margin="0,0,0,10"/>

                        <TextBlock Text="Folder Name"
                                   FontWeight="Heavy"
                                   FontSize="14"
                                   Style="{StaticResource MutedText}"
                                   Margin="0,0,0,4"/>

                        <TextBox x:Name="FolderNameBox"
                                 Margin="0,0,0,10"/>

                        <TextBlock Text="Original Version"
                                   FontWeight="Heavy"
                                   FontSize="14"
                                   Style="{StaticResource MutedText}"
                                   Margin="0,0,0,4"/>

                        <ComboBox x:Name="OriginalDownloadBox"
                                  Style="{StaticResource DarkComboBox}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,16,0,0">

                        <Button Content="Add"
                                Width="100"
                                Margin="0,0,12,0"
                                Background="#FF4FD38B"
                                Style="{StaticResource RoundedButton}"
                                Click="Add_Click"/>

                        <Button Content="Cancel"
                                Width="100"
                                Background="#8B2C2C"
                                Style="{StaticResource RoundedButton}"
                                Click="Cancel_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>




