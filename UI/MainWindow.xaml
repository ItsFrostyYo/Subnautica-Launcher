<Window x:Class="SubnauticaLauncher.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:SubnauticaLauncher.Converters"
        xmlns:ui="clr-namespace:SubnauticaLauncher.UI"
        xmlns:updates="clr-namespace:SubnauticaLauncher.Updates"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="Subnautica Launcher"
        Width="850"
        Height="500"
        MinWidth="850"
        MinHeight="500"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        FontFamily="Aileron"
        WindowStyle="None"
        AllowsTransparency="True">

    <!-- ================= BACKGROUND ================= -->
    <Window.Background>
        <ImageBrush x:Name="BackgroundBrush"
                    Stretch="UniformToFill"/>
    </Window.Background>

    <!-- ================= RESOURCES ================= -->
    <Window.Resources>

        <converters:ActiveColorConverter x:Key="ActiveColorConverter"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style TargetType="ScrollViewer">
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <Style x:Key="RoundedButton" TargetType="Button" BasedOn="{StaticResource RoundedButtonBase}">
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton
                        Background="Transparent"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                        Focusable="False">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"/>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <ContentPresenter
                        Content="{TemplateBinding SelectionBoxItem}"
                        Margin="8,2,30,2"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        TextElement.Foreground="White"/>

                            <Path Data="M 0 0 L 4 4 L 8 0 Z"
                          Fill="White"
                          HorizontalAlignment="Right"
                          Margin="0,0,10,0"
                          VerticalAlignment="Center"/>

                            <Popup x:Name="PART_Popup"
                           Placement="Bottom"
                           IsOpen="{TemplateBinding IsDropDownOpen}"
                           AllowsTransparency="True">
                                <Border Background="Black"
                                BorderBrush="White"
                                BorderThickness="2"
                                CornerRadius="5"
                                Margin="0,4,0,0">
                                    <ScrollViewer>
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome
CaptionHeight="25"
ResizeBorderThickness="6"
CornerRadius="0"
GlassFrameThickness="0"
UseAeroCaptionButtons="False" />
    </shell:WindowChrome.WindowChrome>

    <!-- ================= ROOT ================= -->
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <!-- TITLE BAR -->
            <RowDefinition Height="*"/>
            <!-- CONTENT -->
        </Grid.RowDefinitions>

        <!-- ================= CUSTOM TITLE BAR ================= -->
        <Grid Grid.Row="0"
      Background="#40000000"
      MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Icon -->
                <ColumnDefinition Width="Auto"/>
                <!-- Title -->
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <!-- Window buttons -->
            </Grid.ColumnDefinitions>

            <!-- ICON -->
            <Image Grid.Column="0"
           Source="pack://application:,,,/Assets/Icons/SNLIcon.png"
           Width="16"
           Height="16"
           Margin="12,0,8,0"
           VerticalAlignment="Center"/>

            <!-- TITLE -->
            <StackPanel Grid.Column="1"
                Orientation="Horizontal"
                VerticalAlignment="Center">
                <TextBlock Text="Subnautica + Below Zero Launcher"
                   FontSize="13"
                   FontWeight="SemiBold"
                   Margin="0,0,6,0"/>
                <TextBlock Text="{x:Static updates:Updates.DisplayVersion}"
                   FontSize="13"
                   Opacity="0.7"/>
            </StackPanel>

            <!-- WINDOW BUTTONS -->
            <StackPanel Grid.Column="3"
                Orientation="Horizontal">

                <Button Content="—"
                Width="44"
                Height="25"
                Background="Transparent"
                BorderBrush="#55000000"
                BorderThickness="1"
                Click="Minimize_Click"
                shell:WindowChrome.IsHitTestVisibleInChrome="True"/>

                <Button Content="□"
                Width="44"
                Height="25"
                Background="Transparent"
                BorderBrush="#55000000"
                BorderThickness="1"
                Click="Maximize_Click"
                shell:WindowChrome.IsHitTestVisibleInChrome="True"/>

                <Button Content="✕"
                Width="44"
                Height="25"
                Background="#8B2C2C"
                BorderBrush="#55000000"
                BorderThickness="1"
                Click="Close_Click"
                shell:WindowChrome.IsHitTestVisibleInChrome="True"/>
            </StackPanel>
        </Grid>

        <!-- ================= CONTENT ================= -->
        <Viewbox x:Name="MainLayoutViewbox"
                 Grid.Row="1"
                 Stretch="Uniform"
                 StretchDirection="UpOnly">

            <Border Padding="0">

                <!-- BASE SIZE (DO NOT CHANGE) -->
                <Grid x:Name="MainLayoutGrid"
                      Width="850"
                      Height="468"
                      Margin="10">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- ================= LEFT SIDEBAR ================= -->
                    <Grid x:Name="SidebarPanel" Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0"
                        VerticalAlignment="Center">

                            <Button Content="Versions List"
                        Width="185"
                        Height="60"
                        Margin="0,5"
                        FontSize="25"
                        Background="#154966"
                        Style="{StaticResource RoundedButton}"
                        Click="InstallsTab_Click"/>

                            <Button Content="Settings"
                        Width="185"
                        Height="60"
                        FontSize="25" 
                        Margin="0,25,0,0"            
                        Background="#154966"
                        Style="{StaticResource RoundedButton}"
                        Click="SettingsTab_Click"/>

                            <Button Content="Tools"
        Width="185"
        Height="60"
        FontSize="25"
        Margin="0,25,0,0"
        Background="#154966"
        Style="{StaticResource RoundedButton}"
        Click="ToolsTab_Click"/>


                            <Button Content="Launcher Info"
                        Width="185"
                        Height="60"
                        FontSize="25"
                        Margin="0,25"
                        Background="#154966"
                        Style="{StaticResource RoundedButton}"
                        Click="InfoTab_Click"/>
                        </StackPanel>

                        <Button x:Name="LaunchButton"
        Grid.Row="1"
        Content="Launch"
        Width="200"
        Height="80"
        Margin="0,0,0,25"
        Background="#FF4FD38B"
        FontSize="40"
        Style="{StaticResource RoundedButton}"
        Click="Launch_Click"
        Visibility="Hidden"/>
                    </Grid>

                    <!-- ================= CONTENT ================= -->
                    <Grid Grid.Column="1">

                        <!-- ===== INSTALLS VIEW ===== -->
                        <Grid x:Name="InstallsView" Margin="16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="58"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="0,8,10,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Subnautica"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>

                                <TextBlock Grid.Column="2"
                                           Text="Below Zero"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Grid>

                            <Grid Grid.Row="1" Margin="0,0,10,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                                        Background="#90000000"
                                        CornerRadius="14"
                                        Padding="6">
                                    <ListBox x:Name="InstalledVersionsList"
                                             FontSize="17"
                                             Margin="0"
                                             FontWeight="UltraLight"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             SelectionChanged="InstalledVersionsList_SelectionChanged">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding DisplayLabel}"
                                                           Margin="6,4"
                                                           TextTrimming="CharacterEllipsis"
                                                           Foreground="{Binding Status, Converter={StaticResource ActiveColorConverter}}"/>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Border>

                                <Border Grid.Column="2"
                                        Background="#90000000"
                                        CornerRadius="14"
                                        Padding="6">
                                    <ListBox x:Name="BZInstalledVersionsList"
                                             FontSize="17"
                                             Margin="0"
                                             FontWeight="UltraLight"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             SelectionChanged="BZInstalledVersionsList_SelectionChanged">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding DisplayLabel}"
                                                           Margin="6,4"
                                                           TextTrimming="CharacterEllipsis"
                                                           Foreground="{Binding Status, Converter={StaticResource ActiveColorConverter}}"/>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Border>
                            </Grid>

                            <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,12,0,0">

                                <Button Content="Open Folder"
Width="140"
Height="44"
Margin="0,0,15,0"
Background="#154966"
Style="{StaticResource RoundedButton}"
Click="OpenInstallFolder_Click"/>

                                <Button Content="Add"
                            Width="76"
                            Height="44"
                            Margin="0,0,15,0"
                            Background="#154966"
                            Style="{StaticResource RoundedButton}"
                            Click="InstallVersion_Click"/>

                                <Button Content="Edit"
Width="76"
Height="44"
Margin="0,0,15,0"
Background="#154966"
Style="{StaticResource RoundedButton}"
Click="EditVersion_Click"/>

                                <Button Content="Close Game"
Width="120"
Height="44"
Margin="0,0,0,0"
Background="#C96A16"
Style="{StaticResource RoundedButton}"
Click="CloseGame_Click"/>
                            </StackPanel>
                        </Grid>

                        <!-- ===== SETTINGS VIEW ===== -->
                        <Grid x:Name="SettingsView"
      Visibility="Collapsed"
      Margin="24">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- ================= LEFT: CUSTOMIZE ================= -->
                            <Border Grid.Column="0"
            Margin="0,0,12,0"
            Background="#80000000"
            CornerRadius="12"
            Padding="16">

                                <StackPanel>
                                    <TextBlock Text="Customize"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,12"/>

                                    <TextBlock Text="Background"
                       FontWeight="SemiBold"
                       Margin="0,0,0,6"/>

                                    <ComboBox x:Name="ThemeDropdown"
                      Style="{StaticResource DarkComboBox}"
                      SelectionChanged="ThemeDropdown_SelectionChanged">

                                        <ComboBoxItem Content="Lifepod"/>
                                        <ComboBoxItem Content="Safe Shallows"/>
                                        <ComboBoxItem Content="Kelp Forest"/>
                                        <ComboBoxItem Content="Grassy Plateau"/>
                                        <ComboBoxItem Content="Lost River"/>
                                        <ComboBoxItem Content="Cove Tree"/>
                                        <ComboBoxItem Content="Floating Island"/>
                                        <ComboBoxItem Content="Jellyshroom Caves"/>
                                        <ComboBoxItem Content="Grand Reef"/>
                                        <ComboBoxItem Content="Reaper Leviathan"/>
                                        <ComboBoxItem Content="Ghost Leviathan"/>
                                        <ComboBoxItem Content="Sea Dragon Leviathan"/>
                                        <ComboBoxItem Content="Twisty Bridges"/>
                                        <ComboBoxItem Content="Aurora Borealis"/>
                                        <ComboBoxItem Content="Snowfox"/>
                                        <ComboBoxItem Content="Icy Land"/>
                                        <ComboBoxItem Content="Arcitect Facility"/>
                                        <ComboBoxItem Content="Red Crystals"/>
                                        <ComboBoxItem Content="Snow Stalker"/>
                                        <ComboBoxItem Content="Squid Shark"/>
                                        <ComboBoxItem Content="Shadow Leviathan"/>
                                        <ComboBoxItem Content="Custom"/>
                                    </ComboBox>

                                    <Button Content="Choose Custom Background"
                    Height="35"
                    Margin="0,15,0,0"
                    Background="#154966"
                    Style="{StaticResource RoundedButton}"
                    Click="ChooseCustomBackground_Click"/>

                                    <Border Height="1"
                                            Background="#55FFFFFF"
                                            Margin="0,14,0,10"/>

                                    <TextBlock Text="Overlay Transparency"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,4"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Slider x:Name="OverlayOpacitySlider"
                                                Minimum="0"
                                                Maximum="1"
                                                Value="0.5"
                                                TickFrequency="0.05"
                                                IsSnapToTickEnabled="True"
                                                ValueChanged="OverlayOpacitySlider_ValueChanged"/>
                                        <TextBlock x:Name="OverlayOpacityText"
                                                   Grid.Column="1"
                                                   Width="56"
                                                   Margin="10,0,0,0"
                                                   VerticalAlignment="Center"
                                                   TextAlignment="Right"
                                                   Text="50%"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- ================= RIGHT: OPTIONS ================= -->
                            <Border Grid.Column="1"
        Margin="12,0,0,0"
        Background="#60000000"
        CornerRadius="12"
        Padding="16">

                                <StackPanel>
                                    <TextBlock Text="Options"
               FontSize="20"
               FontWeight="Bold"
               Margin="0,0,0,12"/>

                                    <!-- RENAME ON CLOSE -->
                                    <Grid Margin="0,8,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock
        Text="Disable Renaming Folders on Close (Fixes Steam Replacing/Updating the Version or Deleting it.) Disable this if you only use the Launcher."
        FontWeight="SemiBold"
        TextWrapping="Wrap"
        Margin="0,0,0,6"/>

                                        <Button
        x:Name="RenameOnCloseButton"
        Grid.Row="1"
        Width="110"
        Height="30"
        HorizontalAlignment="Center"
        Background="#8B2C2C"
        Content="Disabled"
        Style="{StaticResource RoundedButton}"
        Click="RenameOnCloseButton_Click"/>
                                    </Grid>

                                    <!-- EXPLOSION RESET DISPLAY -->
                                    <Grid Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
Text="Explosion Reset Display"
VerticalAlignment="Center"
FontWeight="SemiBold"/>

                                        <Button
x:Name="ExplosionDisplayToggleButton"
Grid.Column="1"
Width="110"
Height="30"
Background="#8B2C2C"
Content="Disabled"
Style="{StaticResource RoundedButton}"
Click="ExplosionDisplayToggle_Click"/>
                                    </Grid>

                                    <!-- TRACK EXPLOSION RESETS -->
                                    <Grid Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
Text="Track Explosion Resets"
VerticalAlignment="Center"
FontWeight="SemiBold"/>

                                        <Button
x:Name="ExplosionTrackToggleButton"
Grid.Column="1"
Width="110"
Height="30"
Background="#8B2C2C"
Content="Disabled"
Style="{StaticResource RoundedButton}"
Click="ExplosionTrackToggle_Click"/>
                                    </Grid>

                                    <Border Height="1"
                                            Background="#55FFFFFF"
                                            Margin="0,12,0,10"/>

                                    <TextBlock Text="Launcher Startup Mode"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,4"/>

                                    <ComboBox x:Name="StartupModeDropdown"
                                              Style="{StaticResource DarkComboBox}"
                                              SelectionChanged="StartupModeDropdown_SelectionChanged">
                                        <ComboBoxItem Content="Startup as Window"/>
                                        <ComboBoxItem Content="Startup as Overlay"/>
                                    </ComboBox>

                                    <TextBlock Text="Overlay Toggle Hotkey"
                                               FontWeight="SemiBold"
                                               Margin="0,10,0,4"/>

                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox x:Name="OverlayHotkeyBox"
                                                 Height="32"
                                                 IsReadOnly="True"
                                                 Text="Ctrl+Shift+Tab"
                                                 Foreground="#CCCCCC"
                                                 Background="#22000000"
                                                 BorderBrush="White"
                                                 BorderThickness="1"
                                                 Padding="8"/>

                                        <Button Grid.Column="1"
                                                Content="Set"
                                                Width="70"
                                                Height="32"
                                                Margin="8,0,0,0"
                                                Background="#154966"
                                                Style="{StaticResource RoundedButton}"
                                                Click="SetOverlayHotkey_Click"/>
                                    </Grid>

                                </StackPanel>

                            </Border>

                        </Grid>

                        <!-- ===== TOOLS VIEW ===== -->
                        <Grid x:Name="ToolsView"
      Visibility="Collapsed"
      Margin="24">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- ================= LEFT: RESET MACRO + EXPLOSION ================= -->
                            <Border Grid.Column="0"
            Background="#80000000"
            CornerRadius="12"
            Padding="16"
            Margin="0,0,12,0">

                                <StackPanel>

                                    <!-- ===== RESET MACRO HEADER ===== -->
                                    <Grid Margin="0,0,0,16">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="Reset Macro"
                           FontSize="20"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>

                                        <Button x:Name="ResetMacroToggleButton"
                        Grid.Column="1"
                        Width="110"
                        Height="30"
                        Margin="8,0,0,0"
                        Background="#8B2C2C"
                        Content="Disabled"
                        Style="{StaticResource RoundedButton}"
                        Click="ResetMacroToggleButton_Click"/>
                                    </Grid>

                                    <!-- HOTKEY -->
                                    <TextBlock Text="Hotkey"
                       FontWeight="SemiBold"
                       Margin="0,0,0,4"/>

                                    <Grid Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox x:Name="ResetHotkeyBox"
                         Height="32"
                         IsReadOnly="True"
                         Text="Not set"
                         Foreground="#CCCCCC"
                         Background="#22000000"
                         BorderBrush="White"
                         BorderThickness="1"
                         Padding="8"/>

                                        <Button Grid.Column="1"
                        Content="Set"
                        Width="70"
                        Height="32"
                        Margin="8,0,0,0"
                        Background="#154966"
                        Style="{StaticResource RoundedButton}"
                        Click="SetResetHotkey_Click"/>
                                    </Grid>

                                    <!-- GAMEMODE -->
                                    <TextBlock Text="Gamemode"
                       FontWeight="SemiBold"
                       Margin="0,0,0,4"/>

                                    <ComboBox x:Name="ResetGamemodeDropdown"
                      Style="{StaticResource DarkComboBox}"
                      SelectionChanged="ResetGamemodeDropdown_SelectionChanged">
                                        <ComboBoxItem Content="Survival"/>
                                        <ComboBoxItem Content="Hardcore"/>
                                        <ComboBoxItem Content="Creative"/>
                                        <ComboBoxItem Content="Freedom"/>
                                        <ComboBoxItem Content="SaveSlot1"/>
                                        <ComboBoxItem Content="SaveSlot2"/>
                                        <ComboBoxItem Content="SaveSlot3"/>
                                    </ComboBox>
                                    
                                    <TextBlock Text="Only Works on 1.00/default in-game UI scale."
           TextWrapping="Wrap"
           Margin="0,10,0,0"/>
                                    <!-- ===== SEPARATOR ===== -->
                                    <Border Height="1"
                    Background="#55FFFFFF"
                    Margin="0,10"/>

                                    <!-- ===== EXPLOSION RESET ===== -->
                                    <TextBlock Text="Reset Until Explosion"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,8"/>

                                    <Button x:Name="ExplosionResetToggleButton"
                    Width="160"
                    Height="32"
                    Background="#8B2C2C"
                    Content="Disabled"
                    Style="{StaticResource RoundedButton}"
                    Click="ExplosionResetToggle_Click"/>

                                    <TextBlock Text="Explosion Time Window"
                       FontWeight="SemiBold"
                       Margin="0,12,0,4"/>

                                    <ComboBox x:Name="ExplosionPresetDropdown"
                      IsEnabled="False"
                      Style="{StaticResource DarkComboBox}"
                      SelectionChanged="ExplosionPresetDropdown_SelectionChanged">
                                        <ComboBoxItem Content="46:00 → 46:30" Tag="Min46_To_4630"/>
                                        <ComboBoxItem Content="46:00 → 47:00"  Tag="Min46_To_47"/>
                                        <ComboBoxItem Content="46:00 → 48:00"  Tag="Min46_To_48"/>
                                        <ComboBoxItem Content="46:00 → 50:00"  Tag="Min46_To_50"/>
                                        <ComboBoxItem Content="Under 1 Hour"   Tag="Under1Hour"/>
                                        <ComboBoxItem Content="Over 1 Hour"            Tag="Over1Hour"/>
                                    </ComboBox>

                                    <TextBlock Text="Subnautica only. Not available for Below Zero."
                                               TextWrapping="Wrap"
                                               Margin="0,12,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- ================= RIGHT: TOOLS ================= -->
                            <Border Grid.Column="1"
            Background="#60000000"
            CornerRadius="12"
            Padding="16">

                                <StackPanel>
                                    <TextBlock Text="Hardcore Save Deleter"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Margin="0,0,0,12"/>

                                    <Button x:Name="HardcoreSaveDeleterToggleButton"
                                            Width="180"
                                            Height="32"
                                            Background="#8B2C2C"
                                            Content="Disabled"
                                            Style="{StaticResource RoundedButton}"
                                            Click="HardcoreSaveDeleterToggle_Click"/>

                                    <TextBlock Text="Deletes the latest Hardcore save after reset"
                                               TextWrapping="Wrap"
                                               Margin="0,12,0,0"/>
                                    <TextBlock Text="Only runs when Hardcore is selected"
                                               TextWrapping="Wrap"
                                               Margin="0,4,0,0"/>

                                    <Button x:Name="HardcoreSaveDeleterPurgeButton"
                                            Width="220"
                                            Height="32"
                                            Margin="0,10,0,0"
                                            Background="#154966"
                                            Content="Delete All Hardcore Saves"
                                            Style="{StaticResource RoundedButton}"
                                            Click="HardcoreSaveDeleterPurge_Click"/>

                                    <Border Height="1"
                                            Background="#55FFFFFF"
                                            Margin="0,12,0,10"/>

                                    <TextBlock Text="100% Progress Tracker"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Margin="0,0,0,12"/>

                                    <Button x:Name="Subnautica100TrackerToggleButton"
                                            Width="180"
                                            Height="32"
                                            Background="#8B2C2C"
                                            Content="Disabled"
                                            Style="{StaticResource RoundedButton}"
                                            Click="Subnautica100TrackerToggle_Click"/>

                                    <Button x:Name="Subnautica100TrackerCustomizeButton"
                                            Width="180"
                                            Height="32"
                                            Margin="0,8,0,0"
                                            Background="#154966"
                                            Content="Customize"
                                            Style="{StaticResource RoundedButton}"
                                            Click="Subnautica100TrackerCustomize_Click"/>

                                    <TextBlock Text="Subnautica only. Shows run progress and recent unlocks."
                                               TextWrapping="Wrap"
                                               Margin="0,12,0,0"/>
                                </StackPanel>

                            </Border>

                        </Grid>

                        <!-- ===== INFO / UPDATES VIEW ===== -->
                        <Grid x:Name="InfoView"
      Visibility="Collapsed"
      Margin="24">

                            <Grid.RowDefinitions>
                                <!-- HEADER -->
                                <RowDefinition Height="Auto"/>

                                <!-- UPDATES LIST (SHORTER THAN BEFORE) -->
                                <RowDefinition Height="*"/>

                                <!-- FOOTER ICON BAR -->
                                <RowDefinition Height="64"/>
                            </Grid.RowDefinitions>

                            <!-- HEADER (MOVED UP SLIGHTLY) -->
                            <TextBlock
        Grid.Row="0"
        Text="Updates"
        HorizontalAlignment="Center"
        FontSize="26"
        FontWeight="UltraBold"
        Margin="-50,-6,0,8"/>

                            <!-- UPDATES CONTENT (MOVED UP + LESS BOTTOM SPACE) -->
                            <ScrollViewer
        Grid.Row="1"
        VerticalScrollBarVisibility="Hidden"
        Margin="0,0,0,8">

                                <Border
            Background="#80000000"
            CornerRadius="14"
            Padding="14"
            Margin="0,0,8,0">

                                    <StackPanel x:Name="UpdatesPanel"/>

                                </Border>
                            </ScrollViewer>

                            <!-- FOOTER LINK BAR -->
                            <StackPanel
    Grid.Row="2"
    Orientation="Horizontal"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    Margin="0,6,0,0">

                                <!-- GitHub -->
                                <Button
        Background="Transparent"
        BorderThickness="0"
        Cursor="Hand"
        Margin="16,0"
        Click="OpenGitHub_Click">
                                    <StackPanel HorizontalAlignment="Center">
                                        <Image
                Source="pack://application:,,,/Assets/Icons/GithubIcon.png"
                Width="32"
                Height="32"
                Margin="0,0,0,4"/>
                                        <TextBlock
                Text="Launcher GitHub"
                FontSize="12"
                FontWeight="SemiBold"
                HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!-- YouTube -->
                                <Button
        Background="Transparent"
        BorderThickness="0"
        Cursor="Hand"
        Margin="16,0"
        Click="OpenYouTube_Click">
                                    <StackPanel HorizontalAlignment="Center">
                                        <Image
                Source="pack://application:,,,/Assets/Icons/YoutubeIcon.png"
                Width="32"
                Height="32"
                Margin="0,0,0,4"/>
                                        <TextBlock
                Text="My YouTube"
                FontSize="12"
                FontWeight="SemiBold"
                HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!-- Discord -->
                                <Button
        Background="Transparent"
        BorderThickness="0"
        Cursor="Hand"
        Margin="16,0"
        Click="OpenDiscord_Click">
                                    <StackPanel HorizontalAlignment="Center">
                                        <Image
                Source="pack://application:,,,/Assets/Icons/DiscordIcon.png"
                Width="32"
                Height="32"
                Margin="0,0,0,4"/>
                                        <TextBlock
                Text="Speedrun Discord"
                FontSize="12"
                FontWeight="SemiBold"
                HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                            </StackPanel>
                        </Grid>
                    </Grid>

                    <!-- ================= OVERLAY DASHBOARD ================= -->
                    <Border x:Name="OverlayDashboard"
                            Grid.ColumnSpan="2"
                            Margin="8"
                            Background="#80000000"
                            CornerRadius="16"
                            Padding="10"
                            Visibility="Collapsed">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.45*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="1.1*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="1.25*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="1.05*"/>
                            </Grid.ColumnDefinitions>

                            <!-- INSTALLS -->
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Versions"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Margin="0,0,0,8"/>

                                <Grid Grid.Row="1" Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0"
                                            Background="#90000000"
                                            CornerRadius="10"
                                            Padding="4">
                                        <ListBox x:Name="OverlayInstalledVersionsList"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 FontSize="14"
                                                 SelectionChanged="OverlayInstalledVersionsList_SelectionChanged">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding DisplayLabel}"
                                                               Margin="4,2"
                                                               TextTrimming="CharacterEllipsis"
                                                               Foreground="{Binding Status, Converter={StaticResource ActiveColorConverter}}"/>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </Border>

                                    <Border Grid.Column="2"
                                            Background="#90000000"
                                            CornerRadius="10"
                                            Padding="4">
                                        <ListBox x:Name="OverlayBZInstalledVersionsList"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 FontSize="14"
                                                 SelectionChanged="OverlayBZInstalledVersionsList_SelectionChanged">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding DisplayLabel}"
                                                               Margin="4,2"
                                                               TextTrimming="CharacterEllipsis"
                                                               Foreground="{Binding Status, Converter={StaticResource ActiveColorConverter}}"/>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </Border>
                                </Grid>

                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Button x:Name="OverlayLaunchButton"
                                            Grid.Column="0"
                                            Content="Launch"
                                            Height="34"
                                            MinWidth="84"
                                            Background="#FF4FD38B"
                                            Style="{StaticResource RoundedButton}"
                                            Click="OverlayLaunch_Click"/>
                                    <Button x:Name="OverlayAddButton"
                                            Grid.Column="2"
                                            Content="Add"
                                            Height="34"
                                            MinWidth="60"
                                            Background="#154966"
                                            Style="{StaticResource RoundedButton}"
                                            Click="OverlayAddVersion_Click"/>
                                    <Button x:Name="OverlayEditButton"
                                            Grid.Column="4"
                                            Content="Edit"
                                            Height="34"
                                            MinWidth="60"
                                            Background="#154966"
                                            Style="{StaticResource RoundedButton}"
                                            Click="OverlayEditVersion_Click"/>
                                    <Button x:Name="OverlayOpenFolderButton"
                                            Grid.Column="6"
                                            Content="Open Folder"
                                            Height="34"
                                            MinWidth="96"
                                            Background="#154966"
                                            Style="{StaticResource RoundedButton}"
                                            Click="OverlayOpenFolder_Click"/>
                                </Grid>
                            </Grid>

                            <Border Grid.Column="1" Width="1" Background="#40FFFFFF"/>

                            <!-- SETTINGS -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Settings"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Margin="0,0,0,8"/>

                                <TextBlock Text="Startup Mode" FontWeight="SemiBold"/>
                                <ComboBox x:Name="OverlayStartupModeDropdown"
                                          Height="30"
                                          Margin="0,4,0,8"
                                          Style="{StaticResource DarkComboBox}"
                                          SelectionChanged="StartupModeDropdown_SelectionChanged">
                                    <ComboBoxItem Content="Startup as Window"/>
                                    <ComboBoxItem Content="Startup as Overlay"/>
                                </ComboBox>

                                <TextBlock Text="Overlay Hotkey" FontWeight="SemiBold"/>
                                <Grid Margin="0,4,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="OverlayHotkeyBoxOverlay"
                                             Height="30"
                                             IsReadOnly="True"
                                             Background="#22000000"
                                             BorderBrush="White"
                                             BorderThickness="1"
                                             Foreground="#D8D8D8"
                                             Padding="8"/>
                                    <Button Grid.Column="1"
                                            Width="64"
                                            Height="30"
                                            Margin="8,0,0,0"
                                            Content="Set"
                                            Background="#154966"
                                            Style="{StaticResource RoundedButton}"
                                            Click="SetOverlayHotkey_Click"/>
                                </Grid>

                                <TextBlock Text="Overlay Transparency" FontWeight="SemiBold"/>
                                <Grid Margin="0,4,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider x:Name="OverlayOpacitySliderOverlay"
                                            Minimum="0"
                                            Maximum="1"
                                            Value="0.5"
                                            TickFrequency="0.05"
                                            IsSnapToTickEnabled="True"
                                            ValueChanged="OverlayOpacitySlider_ValueChanged"/>
                                    <TextBlock x:Name="OverlayOpacityTextOverlay"
                                               Grid.Column="1"
                                               Width="56"
                                               Margin="8,0,0,0"
                                               VerticalAlignment="Center"
                                               TextAlignment="Right"
                                               Text="50%"/>
                                </Grid>

                                <Button x:Name="OverlayRenameOnCloseButton"
                                        Height="30"
                                        Margin="0,0,0,6"
                                        Content="Rename On Close: Enabled"
                                        Background="#154966"
                                        Style="{StaticResource RoundedButton}"
                                        Click="RenameOnCloseButton_Click"/>

                                <Button x:Name="OverlayExplosionDisplayToggleButton"
                                        Height="30"
                                        Margin="0,0,0,6"
                                        Content="Explosion Overlay: Disabled"
                                        Background="#8B2C2C"
                                        Style="{StaticResource RoundedButton}"
                                        Click="ExplosionDisplayToggle_Click"/>

                                <Button x:Name="OverlayExplosionTrackToggleButton"
                                        Height="30"
                                        Content="Track Explosion Resets: Disabled"
                                        Background="#8B2C2C"
                                        Style="{StaticResource RoundedButton}"
                                        Click="ExplosionTrackToggle_Click"/>
                            </StackPanel>

                            <Border Grid.Column="3" Width="1" Background="#40FFFFFF"/>

                            <!-- TOOLS -->
                            <StackPanel Grid.Column="4">
                                <TextBlock Text="Tools"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Margin="0,0,0,8"/>

                                <Button x:Name="OverlayResetMacroToggleButton"
                                        Height="30"
                                        Margin="0,0,0,6"
                                        Content="Reset Macro: Disabled"
                                        Background="#8B2C2C"
                                        Style="{StaticResource RoundedButton}"
                                        Click="ResetMacroToggleButton_Click"/>

                                <Grid Margin="0,0,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="OverlayResetHotkeyBox"
                                             Height="30"
                                             IsReadOnly="True"
                                             Background="#22000000"
                                             BorderBrush="White"
                                             BorderThickness="1"
                                             Foreground="#D8D8D8"
                                             Padding="8"/>
                                    <Button Grid.Column="1"
                                            Width="64"
                                            Height="30"
                                            Margin="8,0,0,0"
                                            Content="Set"
                                            Background="#154966"
                                            Style="{StaticResource RoundedButton}"
                                            Click="SetResetHotkey_Click"/>
                                </Grid>

                                <ComboBox x:Name="OverlayResetGamemodeDropdown"
                                          Height="30"
                                          Margin="0,0,0,6"
                                          Style="{StaticResource DarkComboBox}"
                                          SelectionChanged="OverlayResetGamemodeDropdown_SelectionChanged">
                                    <ComboBoxItem Content="Survival"/>
                                    <ComboBoxItem Content="Hardcore"/>
                                    <ComboBoxItem Content="Creative"/>
                                    <ComboBoxItem Content="Freedom"/>
                                    <ComboBoxItem Content="SaveSlot1"/>
                                    <ComboBoxItem Content="SaveSlot2"/>
                                    <ComboBoxItem Content="SaveSlot3"/>
                                </ComboBox>

                                <Button x:Name="OverlayExplosionResetToggleButton"
                                        Height="30"
                                        Margin="0,0,0,6"
                                        Content="Reset Until Explosion: Disabled"
                                        Background="#8B2C2C"
                                        Style="{StaticResource RoundedButton}"
                                        Click="ExplosionResetToggle_Click"/>

                                <ComboBox x:Name="OverlayExplosionPresetDropdown"
                                          Height="30"
                                          Margin="0,0,0,6"
                                          Style="{StaticResource DarkComboBox}"
                                          SelectionChanged="OverlayExplosionPresetDropdown_SelectionChanged">
                                    <ComboBoxItem Content="46:00 to 46:30" Tag="Min46_To_4630"/>
                                    <ComboBoxItem Content="46:00 to 47:00" Tag="Min46_To_47"/>
                                    <ComboBoxItem Content="46:00 to 48:00" Tag="Min46_To_48"/>
                                    <ComboBoxItem Content="46:00 to 50:00" Tag="Min46_To_50"/>
                                    <ComboBoxItem Content="Under 1 Hour" Tag="Under1Hour"/>
                                    <ComboBoxItem Content="Over 1 Hour" Tag="Over1Hour"/>
                                </ComboBox>

                                <Button x:Name="OverlayHardcoreSaveDeleterToggleButton"
                                        Height="30"
                                        Margin="0,0,0,6"
                                        Content="Hardcore Save Deleter: Disabled"
                                        Background="#8B2C2C"
                                        Style="{StaticResource RoundedButton}"
                                        Click="HardcoreSaveDeleterToggle_Click"/>

                                <Button x:Name="OverlaySubnautica100TrackerToggleButton"
                                        Height="30"
                                        Margin="0,0,0,6"
                                        Content="100% Tracker: Disabled"
                                        Background="#8B2C2C"
                                        Style="{StaticResource RoundedButton}"
                                        Click="Subnautica100TrackerToggle_Click"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0"
                                            Height="30"
                                            Content="Customize"
                                            Background="#154966"
                                            Style="{StaticResource RoundedButton}"
                                            Click="Subnautica100TrackerCustomize_Click"/>
                                    <Button Grid.Column="2"
                                            Height="30"
                                            Content="Delete Hardcore Saves"
                                            Background="#154966"
                                            Style="{StaticResource RoundedButton}"
                                            Click="HardcoreSaveDeleterPurge_Click"/>
                                </Grid>
                            </StackPanel>

                            <Border Grid.Column="5" Width="1" Background="#40FFFFFF"/>

                            <!-- INFO -->
                            <StackPanel Grid.Column="6">
                                <TextBlock Text="Launcher Info"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Margin="0,0,0,8"/>

                                <Border Background="#70000000"
                                        CornerRadius="10"
                                        Padding="8"
                                        Height="170">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <StackPanel x:Name="OverlayUpdatesPanel"/>
                                    </ScrollViewer>
                                </Border>

                                <Button Height="30"
                                        Margin="0,8,0,0"
                                        Content="Open GitHub"
                                        Background="#154966"
                                        Style="{StaticResource RoundedButton}"
                                        Click="OpenGitHub_Click"/>
                                <Button Height="30"
                                        Margin="0,6,0,0"
                                        Content="Open YouTube"
                                        Background="#154966"
                                        Style="{StaticResource RoundedButton}"
                                        Click="OpenYouTube_Click"/>
                                <Button Height="30"
                                        Margin="0,6,0,0"
                                        Content="Open Discord"
                                        Background="#154966"
                                        Style="{StaticResource RoundedButton}"
                                        Click="OpenDiscord_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Viewbox>
    </Grid>
</Window>
