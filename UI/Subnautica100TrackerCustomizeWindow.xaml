<Window x:Class="SubnauticaLauncher.UI.Subnautica100TrackerCustomizeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="100% Tracker Customization"
        Width="500"
        SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        FontFamily="Aileron"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>

        <ImageBrush x:Key="BackgroundBrush"
                    Stretch="UniformToFill"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="MutedText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#D0E7F2"/>
        </Style>

        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                CornerRadius="14">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton
                                Background="Transparent"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                Focusable="False">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"/>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <ContentPresenter
                                Content="{TemplateBinding SelectionBoxItem}"
                                Margin="8,2,30,2"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                TextElement.Foreground="White"/>

                            <Path Data="M 0 0 L 4 4 L 8 0 Z"
                                  Fill="White"
                                  HorizontalAlignment="Right"
                                  Margin="0,0,10,0"
                                  VerticalAlignment="Center"/>

                            <Popup x:Name="PART_Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True">
                                <Border Background="Black"
                                        BorderBrush="White"
                                        BorderThickness="2"
                                        CornerRadius="5"
                                        Margin="0,4,0,0">
                                    <ScrollViewer>
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome
            CaptionHeight="25"
            ResizeBorderThickness="6"
            CornerRadius="0"
            GlassFrameThickness="0"
            UseAeroCaptionButtons="False"/>
    </shell:WindowChrome.WindowChrome>

    <Grid>

        <Rectangle Fill="{StaticResource BackgroundBrush}">
            <Rectangle.Effect>
                <BlurEffect Radius="8"/>
            </Rectangle.Effect>
        </Rectangle>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"
                  Background="#40000000"
                  MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Source="pack://application:,,,/Assets/Icons/SNLIcon.png"
                       Width="16"
                       Height="16"
                       Margin="12,0,8,0"
                       VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1"
                           Text="100% Tracker Customization"
                           VerticalAlignment="Center"
                           FontSize="13"
                           Margin="0,3,0,0"
                           FontWeight="SemiBold"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="âœ•"
                            Width="44"
                            Height="25"
                            Background="#8B2C2C"
                            BorderBrush="#55000000"
                            BorderThickness="1"
                            Click="Close_Click"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True"/>
                </StackPanel>
            </Grid>

            <Border Grid.Row="1"
                    Background="#90000000"
                    CornerRadius="14"
                    Padding="14"
                    Margin="12,8,12,12">
                <StackPanel>
                    <TextBlock Text="Default Tracker"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>

                    <TextBlock Text="Configure size and popup behavior for the standard 100% Progress Tracker."
                               Style="{StaticResource MutedText}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Overlay Size"
                               FontWeight="SemiBold"
                               Margin="0,0,0,4"/>
                    <ComboBox x:Name="SizeComboBox"
                              Style="{StaticResource DarkComboBox}">
                        <ComboBoxItem Content="Small" Tag="Small"/>
                        <ComboBoxItem Content="Medium" Tag="Medium"/>
                        <ComboBoxItem Content="Large" Tag="Large"/>
                    </ComboBox>

                    <WrapPanel Margin="0,10,0,0">
                        <CheckBox x:Name="UnlockPopupCheckBox"
                                  Content="Unlock Popup"
                                  Foreground="White"
                                  Margin="0,0,14,6"/>
                        <CheckBox x:Name="SurvivalStartCheckBox"
                                  Content="Survival/Hardcore Tracker Starts"
                                  Foreground="White"
                                  Margin="0,0,14,6"/>
                        <CheckBox x:Name="CreativeStartCheckBox"
                                  Content="Creative Tracker Starts"
                                  Foreground="White"
                                  Margin="0,0,14,6"/>
                    </WrapPanel>

                    <Border Height="1" Background="#55FFFFFF" Margin="0,12,0,10"/>

                    <TextBlock Text="Biome Tracker"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>

                    <CheckBox x:Name="BiomeTrackerEnabledCheckBox"
                              Content="Enable Biome Tracker"
                              Foreground="White"
                              Margin="0,0,0,10"/>

                    <TextBlock Text="Cycle per Biome"
                               FontWeight="SemiBold"
                               Margin="0,0,0,4"/>
                    <ComboBox x:Name="BiomeCycleComboBox"
                              Style="{StaticResource DarkComboBox}">
                        <ComboBoxItem Content="Databanks" Tag="Databanks"/>
                        <ComboBoxItem Content="Blueprints" Tag="Blueprints"/>
                        <ComboBoxItem Content="Both" Tag="Both"/>
                    </ComboBox>

                    <TextBlock Text="Scroll Speed"
                               FontWeight="SemiBold"
                               Margin="0,10,0,4"/>
                    <ComboBox x:Name="BiomeSpeedComboBox"
                              Style="{StaticResource DarkComboBox}">
                        <ComboBoxItem Content="Slow" Tag="Slow"/>
                        <ComboBoxItem Content="Medium" Tag="Medium"/>
                        <ComboBoxItem Content="Fast" Tag="Fast"/>
                    </ComboBox>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,14,0,0">
                        <Button Content="Save"
                                Width="160"
                                Margin="0,0,12,0"
                                Background="#154966"
                                Style="{StaticResource RoundedButton}"
                                Click="Save_Click"/>

                        <Button Content="Cancel"
                                Width="120"
                                Background="#8B2C2C"
                                Style="{StaticResource RoundedButton}"
                                Click="Cancel_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
