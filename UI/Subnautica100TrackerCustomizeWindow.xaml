<Window x:Class="SubnauticaLauncher.UI.Subnautica100TrackerCustomizeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="100% Tracker Customization"
        Width="500"
        SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        FontFamily="Aileron"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>

        <ImageBrush x:Key="BackgroundBrush"
                    Stretch="UniformToFill"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="MutedText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#D0E7F2"/>
        </Style>

        <Style x:Key="DarkComboBox" TargetType="ComboBox" BasedOn="{StaticResource DarkComboBoxBase}">
            <Setter Property="Height" Value="35"/>
        </Style>

    </Window.Resources>

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome
            CaptionHeight="25"
            ResizeBorderThickness="6"
            CornerRadius="0"
            GlassFrameThickness="0"
            UseAeroCaptionButtons="False"/>
    </shell:WindowChrome.WindowChrome>

    <Grid>

        <Rectangle Fill="{StaticResource BackgroundBrush}">
            <Rectangle.Effect>
                <BlurEffect Radius="8"/>
            </Rectangle.Effect>
        </Rectangle>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"
                  Background="#40000000"
                  MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Source="pack://application:,,,/Assets/Icons/SNLIcon.png"
                       Width="16"
                       Height="16"
                       Margin="12,0,8,0"
                       VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1"
                           Text="100% Tracker Customization"
                           VerticalAlignment="Center"
                           FontSize="13"
                           Margin="0,3,0,0"
                           FontWeight="SemiBold"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="âœ•"
                            Width="44"
                            Height="25"
                            Background="#8B2C2C"
                            BorderBrush="#55000000"
                            BorderThickness="1"
                            Click="Close_Click"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True"/>
                </StackPanel>
            </Grid>

            <Border Grid.Row="1"
                    Background="#90000000"
                    CornerRadius="14"
                    Padding="14"
                    Margin="12,8,12,12">
                <StackPanel>
                    <TextBlock Text="Default Tracker"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,6"/>

                    <TextBlock Text="Enable or Disable the 100% Tracker, configure size, popup behavior, and run start type."
                               Style="{StaticResource MutedText}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"/>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.2*"/>
                            <ColumnDefinition Width="18"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <Button x:Name="TrackerEnabledToggleButton"
                                    Width="178"
                                    Height="32"
                                    Background="#8B2C2C"
                                    Content="100% Tracker: Disabled"
                                    HorizontalAlignment="Left"
                                    Style="{StaticResource RoundedButton}"
                                    Click="TrackerEnabledToggleButton_Click"/>

                            <TextBlock Text="Overlay Size"
                                       FontWeight="SemiBold"
                                       Margin="0,12,0,4"/>
                            <ComboBox x:Name="SizeComboBox"
                                      Width="180"
                                      HorizontalAlignment="Left"
                                      Style="{StaticResource DarkComboBox}">
                                <ComboBoxItem Content="Small" Tag="Small"/>
                                <ComboBoxItem Content="Medium" Tag="Medium"/>
                                <ComboBoxItem Content="Large" Tag="Large"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="0,16,43,12" Grid.ColumnSpan="2">
                            <CheckBox x:Name="UnlockPopupCheckBox"
                                      Content="Unlock Popup"
                                      Foreground="White"
                                      Margin="0,0,0,8"/>
                            <CheckBox x:Name="SurvivalStartCheckBox"
                                      Content="Start for Survival/Hardcore"
                                      Foreground="White"
                                      Margin="0,0,0,8"/>
                            <CheckBox x:Name="CreativeStartCheckBox"
                                      Content="Start for Creative"
                                      Foreground="White"/>
                        </StackPanel>
                    </Grid>

                    <Border Height="1" Background="#55FFFFFF" Margin="0,2,0,10"/>

                    <TextBlock Text="Biome Tracker"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>

                    <Button x:Name="BiomeTrackerToggleButton"
                            Width="207"
                            Height="32"
                            Background="#8B2C2C"
                            Content="Biome Tracker: Disabled"
                            HorizontalAlignment="Left"
                            Style="{StaticResource RoundedButton}"
                            Click="BiomeTrackerToggleButton_Click"/>

                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="14"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Show per Biome"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,4"/>
                            <ComboBox x:Name="BiomeCycleComboBox"
                                      Style="{StaticResource DarkComboBox}">
                                <ComboBoxItem Content="Databanks" Tag="Databanks"/>
                                <ComboBoxItem Content="Blueprints" Tag="Blueprints"/>
                                <ComboBoxItem Content="Both" Tag="Both"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Scroll Speed"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,4"/>
                            <ComboBox x:Name="BiomeSpeedComboBox"
                                      Style="{StaticResource DarkComboBox}">
                                <ComboBoxItem Content="Slow" Tag="Slow"/>
                                <ComboBoxItem Content="Medium" Tag="Medium"/>
                                <ComboBoxItem Content="Fast" Tag="Fast"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,14,0,0">
                        <Button Content="Save"
                                Width="160"
                                Margin="0,0,12,0"
                                Background="#154966"
                                Style="{StaticResource RoundedButton}"
                                Click="Save_Click"/>

                        <Button Content="Cancel"
                                Width="120"
                                Background="#8B2C2C"
                                Style="{StaticResource RoundedButton}"
                                Click="Cancel_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
