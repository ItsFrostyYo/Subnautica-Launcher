<Window x:Class="SubnauticaLauncher.UI.DepotDownloaderLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:local="clr-namespace:SubnauticaLauncher"
        Title="Depot Downloader Steam Login"
        Width="360"
        Height="330"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        FontFamily="Aileron"
        WindowStyle="None"
        AllowsTransparency="True">

    <!-- ================= RESOURCES ================= -->
    <Window.Resources>

        <!-- SHARED BACKGROUND BRUSH (SET FROM CODE-BEHIND) -->
        <ImageBrush x:Key="BackgroundBrush"
                    Stretch="UniformToFill"/>

        <!-- GLOBAL TEXT -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- TEXTBOX -->
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#331B4F72"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- PASSWORD BOX -->
        <Style TargetType="PasswordBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#331B4F72"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- ROUNDED BUTTON -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                CornerRadius="14">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!-- ================= WINDOW CHROME ================= -->
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome
            CaptionHeight="25"
            ResizeBorderThickness="6"
            CornerRadius="0"
            GlassFrameThickness="0"
            UseAeroCaptionButtons="False"/>
    </shell:WindowChrome.WindowChrome>

    <!-- ================= ROOT ================= -->
    <Grid>

        <!-- ===== BLURRED BACKGROUND LAYER ===== -->
        <Rectangle Fill="{StaticResource BackgroundBrush}">
            <Rectangle.Effect>
                <!-- Same subtle blur as all other dialogs -->
                <BlurEffect Radius="8"/>
            </Rectangle.Effect>
        </Rectangle>

        <!-- ===== ACTUAL WINDOW CONTENT ===== -->
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ================= TITLE BAR ================= -->
            <Grid Grid.Row="0"
                  Background="#40000000"
                  MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- ICON -->
                <Image Source="pack://application:,,,/Assets/Icons/SNLIcon.png"
                       Width="16"
                       Height="16"
                       Margin="12,0,8,0"
                       VerticalAlignment="Center"/>

                <!-- TITLE -->
                <TextBlock Grid.Column="1"
                           Text="Depot Downloader Steam Login"
                           VerticalAlignment="Center"
                           FontSize="13"
                           Margin="0,3,0,0"
                           FontWeight="SemiBold"/>

                <!-- WINDOW BUTTONS -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal">

                    <Button Content="—"
                            Width="44"
                            Height="25"
                            Background="Transparent"
                            BorderBrush="#55000000"
                            BorderThickness="1"
                            Click="Minimize_Click"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True"/>

                    <Button Content="□"
                            Width="44"
                            Height="25"
                            Background="Transparent"
                            BorderBrush="#55000000"
                            BorderThickness="1"
                            Click="Maximize_Click"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True"/>

                    <Button Content="✕"
                            Width="44"
                            Height="25"
                            Background="#8B2C2C"
                            BorderBrush="#55000000"
                            BorderThickness="1"
                            Click="Close_Click"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True"/>
                </StackPanel>
            </Grid>

            <!-- ================= CONTENT ================= -->
            <Border Grid.Row="1"
                    Background="#331B4F72"
                    CornerRadius="14"
                    Padding="16"
                    Margin="12,12,12,16">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- USERNAME -->
                    <TextBlock Text="Steam Username"
                               Grid.Row="0"
                               FontWeight="SemiBold"/>

                    <TextBox x:Name="UsernameBox"
                             Grid.Row="1"
                             Margin="0,4,0,10"/>

                    <!-- PASSWORD -->
                    <TextBlock Text="Steam Password"
                               Grid.Row="2"
                               FontWeight="SemiBold"/>

                    <PasswordBox x:Name="PasswordBox"
                                 Grid.Row="3"
                                 Margin="0,4,0,10"/>

                    <!-- INFO MESSAGE -->
                    <TextBlock Grid.Row="4"
           TextWrapping="Wrap"
           Margin="0,4,0,12"
           FontSize="12"
           Background="#80000000"
           Foreground="#D0E7F2"
           Text="This will open Depot Downloader to install the selected version and may prompt for Steam Guard authentication.&#x0a;&#x0a;This does NOT save your Steam login information."/>


                    <!-- STATUS -->
                    <TextBlock x:Name="StatusText"
                               Grid.Row="5"
                               Foreground="#FFD28B4F"
                               Margin="0,0,0,12"/>

                    <!-- BUTTONS -->
                    <StackPanel Grid.Row="6"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center">

                        <Button Content="Login"
                                Width="100"
                                Margin="0,0,12,0"
                                Background="#FF4FD38B"
                                Style="{StaticResource RoundedButton}"
                                Click="Login_Click"/>

                        <Button Content="Cancel"
                                Width="100"
                                Background="#8B2C2C"
                                Style="{StaticResource RoundedButton}"
                                Click="Cancel_Click"/>
                    </StackPanel>

                </Grid>
            </Border>

        </Grid>
    </Grid>
</Window>