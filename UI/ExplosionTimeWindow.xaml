<Window x:Class="SubnauticaLauncher.Explosion.ExplosionTimeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Explosion Time Monitor"
        Width="320"
        Height="200"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#FF0E1A22">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Aurora Explosion Info"
                   FontSize="16"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1"
                    Margin="0,12,0,0"
                    VerticalAlignment="Center">

            <TextBlock x:Name="StatusText"
                       Text="Waiting for Subnautica..."
                       FontSize="12"
                       Foreground="#FF9AD7FF"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,6"/>

            <TextBlock x:Name="ExplosionTimeText"
                       Text="--.- s"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#FFFFC857"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,6"/>

            <TextBlock x:Name="CoordsText"
                       Text="X: --  Y: --  Z: --"
                       FontSize="12"
                       Foreground="#FFC0C0C0"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>