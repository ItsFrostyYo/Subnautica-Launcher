<Window x:Class="SubnauticaLauncher.UI.SubnauticaBiomeTrackerOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="290"
        Height="80"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowActivated="False"
        Focusable="False"
        IsHitTestVisible="False"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False">

    <Border CornerRadius="12"
            Background="#55000000"
            BorderBrush="#40FFFFFF"
            BorderThickness="0.25"
            Padding="8,6">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="TitleText"
                       Grid.Row="0"
                       Text="Biome Tracker"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#FF66D39A"
                       Margin="0,0,0,4"/>

            <UniformGrid Grid.Row="1" Columns="2" Rows="2" Margin="0,0,0,0">
                <Border Margin="0,0,4,3" Background="#22000000" CornerRadius="6" Padding="4,2">
                    <StackPanel>
                        <TextBlock x:Name="Type1Text" FontSize="8" Foreground="#BDE3FF" Text="-"/>
                        <TextBlock x:Name="Name1Text" FontSize="9" Foreground="White" TextWrapping="Wrap" LineStackingStrategy="BlockLineHeight" LineHeight="9" Text="-"/>
                    </StackPanel>
                </Border>
                <Border Margin="4,0,0,3" Background="#22000000" CornerRadius="6" Padding="4,2">
                    <StackPanel>
                        <TextBlock x:Name="Type2Text" FontSize="8" Foreground="#BDE3FF" Text="-"/>
                        <TextBlock x:Name="Name2Text" FontSize="9" Foreground="White" TextWrapping="Wrap" LineStackingStrategy="BlockLineHeight" LineHeight="9" Text="-"/>
                    </StackPanel>
                </Border>
                <Border Margin="0,3,4,0" Background="#22000000" CornerRadius="6" Padding="4,2">
                    <StackPanel>
                        <TextBlock x:Name="Type3Text" FontSize="8" Foreground="#BDE3FF" Text="-"/>
                        <TextBlock x:Name="Name3Text" FontSize="9" Foreground="White" TextWrapping="Wrap" LineStackingStrategy="BlockLineHeight" LineHeight="9" Text="-"/>
                    </StackPanel>
                </Border>
                <Border Margin="4,3,0,0" Background="#22000000" CornerRadius="6" Padding="4,2">
                    <StackPanel>
                        <TextBlock x:Name="Type4Text" FontSize="8" Foreground="#BDE3FF" Text="-"/>
                        <TextBlock x:Name="Name4Text" FontSize="9" Foreground="White" TextWrapping="Wrap" LineStackingStrategy="BlockLineHeight" LineHeight="9" Text="-"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </Grid>
    </Border>
</Window>
