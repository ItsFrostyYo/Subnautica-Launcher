<Window x:Class="SubnauticaLauncher.UI.SubnauticaBiomeTrackerOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="290"
        Height="80"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowActivated="False"
        Focusable="False"
        IsHitTestVisible="False"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False">

    <Border CornerRadius="12"
            Background="#55000000"
            BorderBrush="#40FFFFFF"
            BorderThickness="0.25"
            Padding="4">
        <Grid x:Name="RootGrid">
            <Grid.RowDefinitions>
                <RowDefinition x:Name="TopRowDefinition" Height="*"/>
                <RowDefinition x:Name="BottomRowDefinition" Height="0"/>
            </Grid.RowDefinitions>

            <Grid x:Name="TopViewport" ClipToBounds="True">
                <Canvas x:Name="TopEntriesCanvas">
                    <Canvas.RenderTransform>
                        <TranslateTransform x:Name="TopEntriesTranslateTransform"/>
                    </Canvas.RenderTransform>
                </Canvas>
            </Grid>

            <Grid x:Name="BottomViewport" Grid.Row="1" ClipToBounds="True" Visibility="Collapsed">
                <Canvas x:Name="BottomEntriesCanvas">
                    <Canvas.RenderTransform>
                        <TranslateTransform x:Name="BottomEntriesTranslateTransform"/>
                    </Canvas.RenderTransform>
                </Canvas>
            </Grid>
        </Grid>
    </Border>
</Window>
