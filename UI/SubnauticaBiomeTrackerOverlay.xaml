<Window x:Class="SubnauticaLauncher.UI.SubnauticaBiomeTrackerOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="290"
        Height="80"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowActivated="False"
        Focusable="False"
        IsHitTestVisible="False"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False">

    <Border CornerRadius="12"
            Background="#55000000"
            BorderBrush="#40FFFFFF"
            BorderThickness="0.25"
            Padding="6,4">

        <UniformGrid Columns="2" Rows="2">
                <Border Margin="0,0,2,2" Background="#22000000" CornerRadius="6" Padding="4,2">
                    <StackPanel>
                        <TextBlock x:Name="Type1Text" FontSize="8" Foreground="#BDE3FF" Text="-"/>
                        <TextBlock x:Name="Name1Text" FontSize="9" Foreground="White" TextWrapping="Wrap" LineStackingStrategy="BlockLineHeight" LineHeight="9.5" Text="-"/>
                    </StackPanel>
                </Border>
                <Border Margin="2,0,0,2" Background="#22000000" CornerRadius="6" Padding="4,2">
                    <StackPanel>
                        <TextBlock x:Name="Type2Text" FontSize="8" Foreground="#BDE3FF" Text="-"/>
                        <TextBlock x:Name="Name2Text" FontSize="9" Foreground="White" TextWrapping="Wrap" LineStackingStrategy="BlockLineHeight" LineHeight="9.5" Text="-"/>
                    </StackPanel>
                </Border>
                <Border Margin="0,2,2,0" Background="#22000000" CornerRadius="6" Padding="4,2">
                    <StackPanel>
                        <TextBlock x:Name="Type3Text" FontSize="8" Foreground="#BDE3FF" Text="-"/>
                        <TextBlock x:Name="Name3Text" FontSize="9" Foreground="White" TextWrapping="Wrap" LineStackingStrategy="BlockLineHeight" LineHeight="9.5" Text="-"/>
                    </StackPanel>
                </Border>
                <Border Margin="2,2,0,0" Background="#22000000" CornerRadius="6" Padding="4,2">
                    <StackPanel>
                        <TextBlock x:Name="Type4Text" FontSize="8" Foreground="#BDE3FF" Text="-"/>
                        <TextBlock x:Name="Name4Text" FontSize="9" Foreground="White" TextWrapping="Wrap" LineStackingStrategy="BlockLineHeight" LineHeight="9.5" Text="-"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
    </Border>
</Window>
