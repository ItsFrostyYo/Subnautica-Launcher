<Window x:Class="SubnauticaLauncher.UI.AcidMushroomRunOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="300"
        Height="96"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowActivated="False"
        Focusable="False"
        IsHitTestVisible="False"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False">

    <Border CornerRadius="12"
            Background="#55000000"
            BorderBrush="#40FFFFFF"
            BorderThickness="0.25"
            Padding="15">

        <StackPanel VerticalAlignment="Center">
            <TextBlock x:Name="TitleText"
                       Text="Acid Mushroom Tracker"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="#FF4FD38B"
                       Margin="0,0,0,4"/>

            <TextBlock x:Name="CountText"
                       Text="Total Picked Up: 0"
                       FontSize="14"
                       Foreground="White"/>
        </StackPanel>
    </Border>
</Window>
