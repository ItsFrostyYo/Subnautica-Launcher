<Window x:Class="SubnauticaLauncher.UI.DeleteVersionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:local="clr-namespace:SubnauticaLauncher"
        Title="Delete Version"
        Width="500"
        SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        FontFamily="Aileron"
        WindowStyle="None"
        AllowsTransparency="True">

    <!-- ================= RESOURCES ================= -->
    <Window.Resources>

        <!-- SHARED BACKGROUND BRUSH (SET FROM CODE-BEHIND) -->
        <ImageBrush x:Key="BackgroundBrush"
                    Stretch="UniformToFill"/>

        <!-- GLOBAL TEXT -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- MUTED TEXT -->
        <Style x:Key="MutedText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#D0E7F2"/>
        </Style>

    </Window.Resources>

    <!-- ================= WINDOW CHROME ================= -->
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome
            CaptionHeight="25"
            ResizeBorderThickness="6"
            CornerRadius="0"
            GlassFrameThickness="0"
            UseAeroCaptionButtons="False"/>
    </shell:WindowChrome.WindowChrome>

    <!-- ================= ROOT ================= -->
    <Grid>

        <!-- ===== BLURRED BACKGROUND LAYER ===== -->
        <Rectangle Fill="{StaticResource BackgroundBrush}">
            <Rectangle.Effect>
                <!-- Same subtle blur as other dialogs -->
                <BlurEffect Radius="8"/>
            </Rectangle.Effect>
        </Rectangle>

        <!-- ===== ACTUAL WINDOW CONTENT ===== -->
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ================= TITLE BAR ================= -->
            <Grid Grid.Row="0"
                  Background="#40000000"
                  MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- ICON -->
                <Image Source="pack://application:,,,/Assets/Icons/SNLIcon.png"
                       Width="16"
                       Height="16"
                       Margin="12,0,8,0"
                       VerticalAlignment="Center"/>

                <!-- TITLE -->
                <TextBlock Grid.Column="1"
                           Text="Delete Version"
                           VerticalAlignment="Center"
                           FontSize="13"
                           Margin="0,3,0,0"
                           FontWeight="SemiBold"/>

                <!-- WINDOW BUTTONS -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal">

                    <Button Content="—"
                            Width="44"
                            Height="25"
                            Background="Transparent"
                            BorderBrush="#55000000"
                            BorderThickness="1"
                            Click="Minimize_Click"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True"/>

                    <Button Content="□"
                            Width="44"
                            Height="25"
                            Background="Transparent"
                            BorderBrush="#55000000"
                            BorderThickness="1"
                            Click="Maximize_Click"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True"/>

                    <Button Content="✕"
                            Width="44"
                            Height="25"
                            Background="#8B2C2C"
                            BorderBrush="#55000000"
                            BorderThickness="1"
                            Click="Close_Click"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True"/>
                </StackPanel>
            </Grid>

            <!-- ================= CONTENT ================= -->
            <Border Grid.Row="1"
                    Background="#90000000"
                    CornerRadius="14"
                    Padding="16"
                    Margin="16,12,16,16">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- TITLE -->
                    <TextBlock Text="Are you sure you want to do this?"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"/>

                    <!-- DESCRIPTION -->
                    <TextBlock Grid.Row="1"
                               Text="This version can either be removed from the launcher or deleted entirely from disk. Deleting the game will permanently remove all files."
                               TextWrapping="Wrap"
                               Style="{StaticResource MutedText}"
                               Margin="0,0,0,16"/>

                    <!-- BUTTONS -->
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center">

                        <Button Content="Delete Game"
                                Width="120"
                                Margin="0,0,12,0"
                                Background="#8B2C2C"
                                Style="{StaticResource RoundedButton}"
                                Click="Delete_Click"/>

                        <Button Content="Remove From Launcher"
                                Width="180"
                                Margin="0,0,12,0"
                                Background="#154966"
                                Style="{StaticResource RoundedButton}"
                                Click="Remove_Click"/>

                        <Button Content="Cancel"
                                Width="100"
                                Background="#FF4FD38B"
                                Style="{StaticResource RoundedButton}"
                                Click="Cancel_Click"/>
                    </StackPanel>

                </Grid>
            </Border>

        </Grid>
    </Grid>
</Window>
