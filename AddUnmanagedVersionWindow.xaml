<Window x:Class="SubnauticaLauncher.AddUnmanagedVersionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Unmanaged Version"
        Width="420"
        Height="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#071B26">

    <Window.Resources>
        <SolidColorBrush x:Key="Accent" Color="#2EC4C6"/>
        <SolidColorBrush x:Key="Panel" Color="#0D2A3A"/>
        <SolidColorBrush x:Key="TextMain" Color="#E6F7F8"/>
        <SolidColorBrush x:Key="TextMuted" Color="#9FC9CC"/>

        <Style TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="Background" Value="{StaticResource Panel}"/>
            <Setter Property="Foreground" Value="{StaticResource TextMain}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background"
                                        Value="{StaticResource Accent}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <TextBlock Text="Add Unmanaged Subnautica Version"
                   FontSize="18"
                   Foreground="{StaticResource TextMain}"
                   Margin="0,0,0,12"/>

        <!-- CONTENT -->
        <StackPanel Grid.Row="1">

            <TextBlock Text="Folder"
                       Foreground="{StaticResource TextMuted}"
                       Margin="0,0,0,4"/>

            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="FolderPathBox"
                         IsReadOnly="True"/>

                <Button Content="Browse"
                        Width="80"
                        Margin="8,0,0,0"
                        Grid.Column="1"
                        Click="Browse_Click"/>
            </Grid>

            <TextBlock Text="Display Name"
                       Foreground="{StaticResource TextMuted}"
                       Margin="0,0,0,4"/>

            <TextBox x:Name="DisplayNameBox"
                     Margin="0,0,0,10"/>

            <TextBlock Text="Folder Name"
                       Foreground="{StaticResource TextMuted}"
                       Margin="0,0,0,4"/>

            <TextBox x:Name="FolderNameBox"
                     Margin="0,0,0,10"/>

            <TextBlock Text="Original Download"
                       Foreground="{StaticResource TextMuted}"
                       Margin="0,0,0,4"/>

            <ComboBox x:Name="OriginalDownloadBox"/>
        </StackPanel>

        <!-- BUTTONS -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">

            <Button Content="Add"
                    Width="90"
                    Click="Add_Click"/>

            <Button Content="Cancel"
                    Width="90"
                    Margin="8,8,0,0"
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>