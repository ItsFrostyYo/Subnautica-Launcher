<Window x:Class="SubnauticaLauncher.AddVersionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Version"
        Width="420"
        Height="380"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#071B26">

    <Window.Resources>
        <SolidColorBrush x:Key="Accent" Color="#2EC4C6"/>
        <SolidColorBrush x:Key="Panel" Color="#0D2A3A"/>
        <SolidColorBrush x:Key="TextMain" Color="#E6F7F8"/>
        <SolidColorBrush x:Key="TextMuted" Color="#9FC9CC"/>

        <Style TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="Background" Value="{StaticResource Panel}"/>
            <Setter Property="Foreground" Value="{StaticResource TextMain}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background"
                                        Value="{StaticResource Accent}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <TextBlock Text="Select a version to install"
                   FontSize="18"
                   Foreground="{StaticResource TextMain}"
                   Margin="0,0,0,12"/>

        <!-- VERSION LIST -->
        <ListBox x:Name="AvailableVersionsList"
                 Grid.Row="1"
                 Background="{StaticResource Panel}"
                 Foreground="{StaticResource TextMain}"
                 BorderThickness="0"/>

        <!-- BUTTONS -->
        <Grid Grid.Row="2"
      Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- ADD UNMANAGED (LEFT) -->
            <Button Content="Add Unmanaged"
            Width="140"
            Grid.Column="0"
            Margin="0,8,0,0"
            Click="AddUnmanaged_Click"/>

            <!-- INSTALL (CENTERED CORRECTLY) -->
            <Button x:Name="InstallButton"
            Content="Install"
            Width="90"
            Grid.Column="2"
            Margin="0,8,8,0"
            Click="Install_Click"/>

            <!-- CANCEL (RIGHT) -->
            <Button Content="Cancel"
            Width="90"
            Grid.Column="3"
            Margin="0,8,0,0"
            Click="Cancel_Click"/>
        </Grid>
    </Grid>
</Window>